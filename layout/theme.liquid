<!doctype html>
<html lang="{{ request.locale.iso_code }}">
<head>
  <title>
    {{ page_title -}}
    {%- if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif -%}
    {%- if current_page != 1 %} &ndash; Page {{ current_page }}{% endif -%}
    {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
  </title>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  {% if page_description %}
    <meta name="description" content="{{ page_description | escape }}" />
  {% endif %}

  <link rel="canonical" href="{{ canonical_url }}" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Open Graph & Twitter Card Tags -->
  {% render 'social-meta-tags' %}
  {% render 'structured-data' %}
  
  <link rel="shortcut icon" href="./favicon.svg" type="image/svg+xml">
  
  <!-- Fonts are now loaded via application.css.liquid based on theme settings -->

  <!-- Critical Images Preload -->
  <!-- Images are loaded from hero section settings or placeholders -->

  {{ content_for_header }} <!-- Header hook for plugins -->
  
  <!-- Critical CSS - Load immediately -->
  {{ 'application.css' | asset_url | stylesheet_tag }} 
  
  <!-- Lightweight AOS replacement - CSS-only fade-up animations -->
  <style>
    [data-aos] {
      opacity: 0;
      transform: translateY(20px);
      transition: opacity 0.6s ease-out, transform 0.6s ease-out;
    }
    [data-aos].aos-animate {
      opacity: 1;
      transform: translateY(0);
    }
  </style>

  <script>
    window.FragranceUtils = {
      debounce: function (func, delay) {
        var timeout;
        return function () {
          var context = this;
          var args = arguments;
          clearTimeout(timeout);
          timeout = setTimeout(function () { func.apply(context, args); }, delay);
        };
      },
      throttle: function (func, limit) {
        var inThrottle;
        return function () {
          var args = arguments;
          var context = this;
          if (!inThrottle) {
            func.apply(context, args);
            inThrottle = true;
            setTimeout(function () { inThrottle = false; }, limit);
          }
        };
      }
    };
  </script>

</head>
<body id="top">
  {% sections 'header-group' %}
  <main role="main">
    {{ content_for_layout }}
  </main>
  {% sections 'backToTop-group' %}
  {% sections 'footer-group' %}

  <!-- Deferred JavaScript - Loads after page render -->
  <script src="{{ 'application.js' | asset_url }}" defer></script>
  
</body>
</html>