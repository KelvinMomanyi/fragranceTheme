[
  {
    "name": "theme_info",
    "theme_name": "Velour",
    "theme_version": "1.1.0",
    "theme_author": "Velour Theme Development",
    "theme_documentation_url": "https://help.shopify.com",
    "theme_support_url": "https://help.shopify.com"
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "color_scheme_group",
        "id": "color_schemes",
        "definition": [
          {
            "type": "color",
            "id": "background",
            "label": "Background",
            "default": "#FFFFFF"
          },
          {
            "type": "color_background",
            "id": "background_gradient",
            "label": "Background gradient",
            "info": "Optional gradient that overlays the background color"
          },
          {
            "type": "color",
            "id": "text",
            "label": "Text",
            "default": "#121212"
          },
          {
            "type": "color",
            "id": "button",
            "label": "Solid button background",
            "default": "#121212"
          },
          {
            "type": "color",
            "id": "button_label",
            "label": "Solid button label",
            "default": "#FFFFFF"
          },
          {
            "type": "color",
            "id": "secondary_button_label",
            "label": "Outline button",
            "default": "#121212"
          },
          {
            "type": "color",
            "id": "shadow",
            "label": "Shadow",
            "default": "#121212"
          }
        ],
        "role": {
          "text": "text",
          "background": {
            "solid": "background",
            "gradient": "background_gradient"
          },
          "links": "secondary_button_label",
          "icons": "text",
          "primary_button": "button",
          "on_primary_button": "button_label",
          "primary_button_border": "button",
          "secondary_button": "background",
          "on_secondary_button": "secondary_button_label",
          "secondary_button_border": "secondary_button_label"
        }
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Font settings"
      },
      {
        "type": "font_picker",
        "id": "font_heading",
        "label": "Heading font",
        "default": "serif",
        "info": "Font used for headings throughout the theme"
      },
      {
        "type": "font_picker",
        "id": "font_body",
        "label": "Body font",
        "default": "sans-serif",
        "info": "Font used for body text throughout the theme"
      }
    ]
  },
  {
    "name": "Logo",
    "settings": [
      {
        "type": "header",
        "content": "Logo"
      },
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo image",
        "info": "Upload your logo. Works with images of different aspect ratios (landscape or portrait)."
      },
      {
        "type": "range",
        "id": "logo_width",
        "min": 50,
        "max": 300,
        "step": 10,
        "unit": "px",
        "label": "Logo width",
        "default": 150
      },
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon",
        "info": "Upload a favicon image. Will be shown in browser tabs."
      }
    ]
  },
  {
    "name": "Social media",
    "settings": [
      {
        "type": "header",
        "content": "Social media accounts"
      },
      {
        "type": "text",
        "id": "social_facebook",
        "label": "Facebook",
        "info": "https://facebook.com/yourpage"
      },
      {
        "type": "text",
        "id": "social_instagram",
        "label": "Instagram",
        "info": "https://instagram.com/yourprofile"
      },
      {
        "type": "text",
        "id": "social_twitter",
        "label": "Twitter",
        "info": "https://twitter.com/yourprofile"
      },
      {
        "type": "text",
        "id": "social_pinterest",
        "label": "Pinterest",
        "info": "https://pinterest.com/yourprofile"
      },
      {
        "type": "text",
        "id": "social_youtube",
        "label": "YouTube",
        "info": "https://youtube.com/yourchannel"
      },
      {
        "type": "text",
        "id": "social_tiktok",
        "label": "TikTok",
        "info": "https://tiktok.com/@yourprofile"
      },
      {
        "type": "text",
        "id": "social_tumblr",
        "label": "Tumblr",
        "info": "https://tumblr.com/yourprofile"
      },
      {
        "type": "text",
        "id": "social_snapchat",
        "label": "Snapchat",
        "info": "https://www.snapchat.com/add/yourprofile"
      },
      {
        "type": "text",
        "id": "social_vimeo",
        "label": "Vimeo",
        "info": "https://vimeo.com/yourprofile"
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "header",
        "content": "Cart settings"
      },
      {
        "type": "select",
        "id": "cart_type",
        "label": "Cart type",
        "options": [
          {
            "value": "drawer",
            "label": "Drawer"
          },
          {
            "value": "page",
            "label": "Page"
          }
        ],
        "default": "drawer"
      },
      {
        "type": "checkbox",
        "id": "cart_notes_enable",
        "label": "Enable cart notes",
        "default": true
      }
    ]
  },
  {
    "name": "Product",
    "settings": [
      {
        "type": "header",
        "content": "Product page settings"
      },
      {
        "type": "checkbox",
        "id": "product_show_vendor",
        "label": "Show product vendor",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "product_show_sku",
        "label": "Show product SKU",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "product_show_share_buttons",
        "label": "Show social sharing buttons",
        "default": true
      }
    ]
  }
]