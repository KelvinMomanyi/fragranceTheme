{%- assign og_title = page_title -%}
{%- assign og_url = canonical_url -%}
{%- assign og_type = 'website' -%}
{%- assign og_description = page_description | default: shop.description | default: shop.name -%}

{% if request.page_type == 'product' %}
  {%- assign og_type = 'product' -%}
  {%- assign og_title = product.title | strip_html -%}
  {%- assign og_price = product.price | money_without_currency | strip_html -%}
  {%- assign og_currency = cart.currency.iso_code -%}
{% elsif request.page_type == 'article' %}
  {%- assign og_type = 'article' -%}
  {%- assign og_title = article.title | strip_html -%}
{% elsif request.page_type == 'collection' %}
  {%- assign og_type = 'website' -%}
  {%- assign og_title = collection.title | strip_html -%}
{% elsif request.page_type == 'password' %}
  {%- assign og_url = shop.url -%}
{% endif %}

<meta property="og:site_name" content="{{ shop.name }}">
<meta property="og:url" content="{{ og_url }}">
<meta property="og:title" content="{{ og_title }}">
<meta property="og:type" content="{{ og_type }}">
<meta property="og:description" content="{{ og_description }}">

{% if request.page_type == 'product' %}
  {%- if product.media.size > 0 -%}
    {%- for media in product.media limit: 3 -%}
      <meta property="og:image" content="http:{{ media | image_url: width: 1200 }}">
      <meta property="og:image:secure_url" content="https:{{ media | image_url: width: 1200 }}">
      <meta property="og:image:width" content="1200">
      <meta property="og:image:height" content="{{ 1200 | divided_by: media.aspect_ratio | round }}">
    {%- endfor -%}
  {%- else -%}
    {%- if page_image -%}
      <meta property="og:image" content="http:{{ page_image | image_url: width: 1200 }}">
      <meta property="og:image:secure_url" content="https:{{ page_image | image_url: width: 1200 }}">
      <meta property="og:image:width" content="1200">
      <meta property="og:image:height" content="628">
    {%- endif -%} 
  {%- endif -%}
  
  <meta property="product:price:amount" content="{{ og_price }}">
  <meta property="product:price:currency" content="{{ og_currency }}">
  
{% elsif request.page_type == 'article' %}
  {%- if article.image -%}
    <meta property="og:image" content="http:{{ article.image | image_url: width: 1200 }}">
    <meta property="og:image:secure_url" content="https:{{ article.image | image_url: width: 1200 }}">
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="{{ 1200 | divided_by: article.image.aspect_ratio | round }}">
  {%- endif -%}
{% elsif request.page_type == 'collection' %}
  {%- if collection.image -%}
    <meta property="og:image" content="http:{{ collection.image | image_url: width: 1200 }}">
    <meta property="og:image:secure_url" content="https:{{ collection.image | image_url: width: 1200 }}">
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="{{ 1200 | divided_by: collection.image.aspect_ratio | round }}">
  {%- endif -%}
{% else %}
  {%- if page_image -%}
    <meta property="og:image" content="http:{{ page_image | image_url: width: 1200 }}">
    <meta property="og:image:secure_url" content="https:{{ page_image | image_url: width: 1200 }}">
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="628">
  {%- endif -%}
{% endif %}

{% unless settings.social_twitter == blank %}
  <meta name="twitter:site" content="{{ settings.social_twitter | split: 'twitter.com/' | last | prepend: '@' }}">
{% endunless %}
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="{{ og_title }}">
<meta name="twitter:description" content="{{ og_description }}">
