<div id="login-modal" class="modal">
  <div class="modal-content login-modal-content">
    <span class="close-modal" onclick="closeLoginModal()">&times;</span>
    <div class="modal-header">
      <h2 class="h3 text-center">Login</h2>
    </div>
    <div class="modal-body">
      {% form 'customer_login' %}
        {{ form.errors | default_errors }}
        <div class="field">
          <input type="email" name="customer[email]" id="CustomerEmail" autocomplete="email" autocorrect="off" autocapitalize="off" placeholder="Email" required>
        </div>
        {% if form.password_needed %}
          <div class="field">
            <input type="password" value="" name="customer[password]" id="CustomerPassword" placeholder="Password" required>
          </div>
        {% endif %}
        <div class="text-center">
            <a href="#recover" class="forgot-password">Forgot your password?</a>
        </div>
        <button type="submit" class="btn btn-primary btn-full">Sign In</button>
        <div class="text-center create-account">
          <p>Don't have an account? <a href="{{ routes.account_register_url }}">Create one</a></p>
        </div>
      {% endform %}
    </div>
  </div>
</div>
