{%- liquid
  assign sort_by = collection.sort_by | default: collection.default_sort_by
  assign filter_count = 0
  for filter in collection.filters
    assign filter_count = filter_count | plus: filter.active_values.size
  endfor
-%}

<div class="facets-container" id="main-collection-filters">
  <form class="facets-form" id="FacetFiltersForm">
    <div class="facets-wrapper">
      
      {%- comment -%} Active Filters Summary {%- endcomment -%}
      {% if filter_count > 0 %}
        <div class="active-facets">
          <span class="active-facets__label">{{ filter_count }} filter{% if filter_count > 1 %}s{% endif %} applied:</span>
          <div class="active-facets__list">
            {%- for filter in collection.filters -%}
              {%- for value in filter.active_values -%}
                <a href="{{ value.url_to_remove }}" class="active-facet">
                  <span class="active-facet__label">{{ filter.label }}: {{ value.label }}</span>
                  <span class="active-facet__remove" aria-label="Remove filter">Ã—</span>
                </a>
              {%- endfor -%}
            {%- endfor -%}
            <a href="{{ collection.url }}" class="active-facets__clear">Clear all</a>
          </div>
        </div>
      {% endif %}

      {%- comment -%} Sort By Dropdown {%- endcomment -%}
      <div class="facet-sort">
        <label for="SortBy">Sort by:</label>
        <select name="sort_by" id="SortBy" aria-label="Sort products" onchange="this.closest('form').submit()">
          {%- for option in collection.sort_options -%}
            <option value="{{ option.value }}" {% if option.value == sort_by %}selected="selected"{% endif %}>
              {{ option.name }}
            </option>
          {%- endfor -%}
        </select>
      </div>

      {%- comment -%} Filter Drawers {%- endcomment -%}
      <div class="facets-list">
        {%- for filter in collection.filters -%}
          <details class="facet-drawer" {% if filter.active_values.size > 0 %}open{% endif %}>
            <summary class="facet-drawer__summary">
              <span class="facet-drawer__title">{{ filter.label }}</span>
              <span class="facet-drawer__icon">+</span>
            </summary>
            
            <div class="facet-drawer__content">
              {%- case filter.type -%}
                
                {%- comment -%} List Filters (Type, Vendor, Availability, Variant Options) {%- endcomment -%}
                {%- when 'list' -%}
                  <ul class="facet-list">
                    {%- for value in filter.values -%}
                      <li class="facet-item">
                        <label class="facet-checkbox">
                          <input
                            type="checkbox"
                            name="{{ value.param_name }}"
                            value="{{ value.value }}"
                            {% if value.active %}checked{% endif %}
                            {% if value.count == 0 and value.active == false %}disabled{% endif %}
                            onchange="this.closest('form').submit()"
                          >
                          <span class="facet-checkbox__label">
                            {{ value.label }}
                            <span class="facet-count">({{ value.count }})</span>
                          </span>
                        </label>
                      </li>
                    {%- endfor -%}
                  </ul>

                {%- comment -%} Price Range Filter {%- endcomment -%}
                {%- when 'price_range' -%}
                  <div class="facet-price-range">
                    <div class="price-range-inputs">
                      <div class="price-field">
                        <label for="Filter-{{ filter.label }}-GTE">From</label>
                        <input
                          name="{{ filter.min_value.param_name }}"
                          id="Filter-{{ filter.label }}-GTE"
                          type="number"
                          placeholder="0"
                          min="0"
                          max="{{ filter.range_max | money_without_currency | replace: ',', '' }}"
                          {% if filter.min_value.value %}value="{{ filter.min_value.value | money_without_currency | replace: ',', '' }}"{% endif %}
                        >
                      </div>
                      <span class="price-separator">-</span>
                      <div class="price-field">
                        <label for="Filter-{{ filter.label }}-LTE">To</label>
                        <input
                          name="{{ filter.max_value.param_name }}"
                          id="Filter-{{ filter.label }}-LTE"
                          type="number"
                          placeholder="{{ filter.range_max | money_without_currency | replace: ',', '' }}"
                          min="0"
                          max="{{ filter.range_max | money_without_currency | replace: ',', '' }}"
                          {% if filter.max_value.value %}value="{{ filter.max_value.value | money_without_currency | replace: ',', '' }}"{% endif %}
                        >
                      </div>
                    </div>
                    <button type="submit" class="price-range__button">Apply</button>
                  </div>

              {%- endcase -%}
            </div>
          </details>
        {%- endfor -%}
      </div>

    </div>
  </form>

  {%- comment -%} Product Count {%- endcomment -%}
  <div class="facets-results">
    <p class="facets-count">
      {% if collection.results_count == collection.all_products_count %}
        {{ collection.results_count }} product{% if collection.results_count != 1 %}s{% endif %}
      {% else %}
        Showing {{ collection.results_count }} of {{ collection.all_products_count }} product{% if collection.all_products_count != 1 %}s{% endif %}
      {% endif %}
    </p>
  </div>
</div>

<style>
  .facets-container {
    margin-bottom: 30px;
    border-bottom: 1px solid #e0e0e0;
    padding-bottom: 20px;
    width: 100%;
  }

  .active-facets {
    background: #f5f5f5;
    padding: 15px;
    border-radius: 8px;
    margin-bottom: 20px;
  }

  .active-facets__label {
    font-weight: 600;
    margin-bottom: 10px;
    display: block;
  }

  .active-facets__list {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    margin-top: 10px;
  }

  .active-facet {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 6px 12px;
    background: #fff;
    border: 1px solid #ddd;
    border-radius: 20px;
    text-decoration: none;
    color: #111;
    font-size: 0.9em;
    transition: all 0.2s;
  }

  .active-facet:hover {
    background: #f0f0f0;
    border-color: #111;
  }

  .active-facet__remove {
    font-size: 1.2em;
    line-height: 1;
  }

  .active-facets__clear {
    color: #d32f2f;
    text-decoration: underline;
    font-size: 0.9em;
  }

  .facet-sort {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 20px;
    justify-content: flex-end;
  }

  .facet-sort label {
    font-weight: 600;
  }

  .facet-sort select {
    padding: 8px 12px;
    border: 1px solid #ddd;
    border-radius: 4px;
    background: #fff;
    cursor: pointer;
    font-size: 0.95em;
  }

  .facets-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 15px;
  }

  .facet-drawer {
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    overflow: hidden;
    position: relative;
    z-index: 10;
  }

  .facet-drawer__summary {
    padding: 12px 15px;
    background: #f9f9f9;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    user-select: none;
  }

  .facet-drawer__summary:hover {
    background: #f0f0f0;
  }

  .facet-drawer__title {
    font-weight: 600;
    font-size: 0.95em;
  }

  .facet-drawer__icon {
    font-size: 1.2em;
    transition: transform 0.2s;
  }

  .facet-drawer[open] .facet-drawer__icon {
    transform: rotate(45deg);
  }

  .facet-drawer__content {
    padding: 15px;
    background: #fff;
  }

  .facet-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .facet-item {
    margin-bottom: 10px;
  }

  .facet-checkbox {
    display: flex;
    align-items: center;
    gap: 8px;
    cursor: pointer;
  }

  .facet-checkbox input[type="checkbox"] {
    width: 18px;
    height: 18px;
    cursor: pointer;
  }

  .facet-checkbox input[type="checkbox"]:disabled {
    cursor: not-allowed;
    opacity: 0.5;
  }

  .facet-checkbox__label {
    flex: 1;
    font-size: 0.9em;
  }

  .facet-count {
    color: #666;
  }

  .facet-price-range {
    padding: 10px 0;
  }

  .price-range-inputs {
    display: flex;
    align-items: flex-end;
    gap: 10px;
    margin-bottom: 15px;
  }

  .price-field {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 5px;
  }

  .price-field label {
    font-size: 0.85em;
    color: #666;
  }

  .price-field input {
    padding: 8px;
    border: 1px solid #ddd;
    border-radius: 4px;
    width: 100%;
  }

  .price-separator {
    margin-bottom: 8px;
    color: #666;
  }

  .price-range__button {
    width: 100%;
    padding: 10px;
    background: #111;
    color: #fff;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-weight: 600;
  }

  .price-range__button:hover {
    background: #000;
  }

  .facets-results {
    margin-top: 20px;
    text-align: center;
  }

  .facets-count {
    color: #666;
    font-size: 0.95em;
  }

  @media (max-width: 768px) {
    .facets-list {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  // Auto-submit form when filters change
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('FacetFiltersForm');
    if (form) {
      form.addEventListener('change', function(e) {
        if (e.target.type === 'checkbox') {
          form.submit();
        }
      });
    }
  });
</script>
