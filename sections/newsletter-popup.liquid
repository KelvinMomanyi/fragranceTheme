<div id="newsletter-popup" class="newsletter-popup">
    <div class="newsletter-popup-content">
      <button class="close-popup" onclick="closePopup()">
        {% render 'icon-velour', icon: 'close', size: 'large' %}
      </button>
      <div class="newsletter-card1">
        <div class="newcard-content">
          <h2>Stay Updated!</h2>
          <p>Subscribe to our newsletter and get the latest updates right in your inbox.</p>
          {% form 'customer' %}
          <form action="{{ shop.url }}/contact#contact_form" method="post" accept-charset="UTF-8" class="subscribe-form">
            <input type="hidden" name="form_type" value="customer">
            <input type="hidden" name="utf8" value="âœ“">
            <input type="email" name="contact[email]" placeholder="Enter your email" required>
            <button type="submit" class='btn btn-primary'>Subscribe</button>
          </form>
        {% endform %}
        </div>
        <div class="card-image">
          {% if section.settings.image1 != blank %}
            <img src="{{ section.settings.image1 | image_url: width: 800 }}" 
                 srcset="{{ section.settings.image1 | image_url: width: 400 }} 400w,
                         {{ section.settings.image1 | image_url: width: 800 }} 800w"
                 sizes="(max-width: 600px) 100vw, 400px"
                 alt="Newsletter Image" loading="lazy"> 
           {% else %}
            <img src="{{'about-banner.jpg' | asset_url}}" 
                 alt="Newsletter Image" loading="lazy">   
          {% endif %}
        </div>
      </div>
    </div>
  </div>
  


<style>
    .newsletter-popup {
        display: none; /* Hidden by default */
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        justify-content: center;
        align-items: center;
        z-index: 1000;
      }
      
      .newsletter-popup-content {
        background: white;
        {% comment %} border-radius: 10px; {% endcomment %}
        padding: 20px;
        max-width: 600px;
        width: 90%;
        position: relative;
      }
      
    .close-popup{
      z-index:99;
    }
    .newsletter-card1 {
      display: flex;
      width: 100%;
      max-width: 800px;
      margin: 0 auto;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      {% comment %} border-radius: 10px; {% endcomment %}
      overflow: hidden;
    }
    
    .card-image {
      flex: 1;
      position: relative;
    }
    
    .card-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    
    .newcard-content {
      flex: 1;
      background-color: #f8f9fa;
      padding: 40px;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }
    
    .newcard-content h2 {
      margin: 0 0 15px;
      font-size: 24px;
      color: #333;
    }
    
    .newcard-content p {
      margin: 0 0 20px;
      font-size: 16px;
      color: #555;
    }
    
    .subscribe-form {
      display: flex;
      flex-direction:column;
    }
    
    .subscribe-form input[type="email"] {
      flex: 1;
      padding: 10px 15px;
      font-size: 16px;
      border: 1px solid #ddd;
      border-radius: 5px 0 0 5px;
      outline: none;
    }
    
    .subscribe-form button {
      padding: 10px 20px;
      font-size: 16px;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 0 5px 5px 0;
      cursor: pointer;
      transition: background-color 0.3s;
    }
    
    .subscribe-form button:hover {
      background-color: #0056b3;
    }

    @media screen and (max-width: 575px) {
      .newsletter-card1 {
        display: flex;
        flex-direction: column;
      }
      .newcard-content {
        padding: 10px;
      }
      .newcard-content h2 {
        margin: 0 0 8px;
        font-size: 16px;
        color: #333;
      }
      
      .newcard-content p {
        margin: 0 0 10px;
        font-size:14px;
        color: #555;
      }
      .subscribe-form input[type="email"] {
        flex: 1;
        padding: 10px 15px;
        font-size: 14px;
      }
      
      .subscribe-form button {
        {% comment %} padding: 10px 20px; {% endcomment %}
        font-size: 14px;
        width:100%;
      }
  }  
    
  </style>

  <script>
(function() {
    document.addEventListener('DOMContentLoaded', function() {
        const popup = document.getElementById('newsletter-popup');
        const cookieName = 'newsletterPopupSeen';
      
        function showPopup() {
          popup.style.display = 'flex';
        }
      
        function closePopup() {
          popup.style.display = 'none';
          // Set a cookie to remember that the user has seen the popup
          document.cookie = `${cookieName}=true; max-age=86400; path=/`; // Cookie expires in 1 day
        }
      
        // Check if the popup has been shown before
        if (!document.cookie.split('; ').find(row => row.startsWith(cookieName))) {
          // Show the popup after 5 seconds (5000 milliseconds)
          setTimeout(showPopup, 5000);
        }
      
        // Add event listener to close the popup
        document.querySelector('.close-popup').addEventListener('click', closePopup);
      });
      
  </script> 
