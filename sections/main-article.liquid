<div class="article-page">
  <!-- Hero Section -->
  <div class="article-hero">
    <div class="hero-overlay"></div>
    <img src="{{ article.image | img_url: 'master' }}" alt="{{ article.title }}" class="hero-background">
    <div class="hero-content container">
      {% if article.tags.size > 0 %}
      <div class="hero-tags">
        {% for tag in article.tags limit: 3 %}
        <span class="hero-tag">{{ tag }}</span>
        {% endfor %}
      </div>
      {% endif %}
      <h1 class="hero-title">{{ article.title }}</h1>
      <div class="hero-meta">
        <div class="meta-item">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>
          <span>{{ article.author }}</span>
        </div>
        <span class="meta-divider">•</span>
        <div class="meta-item">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line></svg>
          <span>{{ article.created_at | date: "%B %d, %Y" }}</span>
        </div>
        <span class="meta-divider">•</span>
        <div class="meta-item">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><polyline points="12 6 12 12 16 14"></polyline></svg>
          <span>5 min read</span>
        </div>
      </div>
    </div>
    <div class="scroll-indicator">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="12" y1="5" x2="12" y2="19"></line><polyline points="19 12 12 19 5 12"></polyline></svg>
    </div>
  </div>

  <!-- Main Content -->
  <div class="article-wrapper">
    <div class="article-main container">
      <!-- Reading Progress Bar -->
      <div class="progress-bar">
        <div class="progress-fill"></div>
      </div>

      <article class="article-content">
        <!-- Article Body -->
        <div class="article-body">
          {{ article.content }}
        </div>

        <!-- Article Footer -->
        <footer class="article-footer">
          <div class="share-section">
            <h3>Share this article</h3>
            <div class="share-buttons">
              <button class="share-btn share-twitter" aria-label="Share on Twitter">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"></path></svg>
              </button>
              <button class="share-btn share-facebook" aria-label="Share on Facebook">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z"></path></svg>
              </button>
              <button class="share-btn share-linkedin" aria-label="Share on LinkedIn">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M16 8a6 6 0 016 6v7h-4v-7a2 2 0 00-2-2 2 2 0 00-2 2v7h-4v-7a6 6 0 016-6zM2 9h4v12H2z"></path><circle cx="4" cy="4" r="2"></circle></svg>
              </button>
              <button class="share-btn share-copy" aria-label="Copy link">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path><path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path></svg>
              </button>
            </div>
          </div>

          <div class="author-card">
            <div class="author-avatar">
              <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>
            </div>
            <div class="author-details">
              <h3>{{ article.author }}</h3>
              <p>Content creator and storyteller passionate about sharing insights and knowledge. Follow for more inspiring articles.</p>
              <a href="{{ blog.url }}" class="author-link">View all articles →</a>
            </div>
          </div>
        </footer>
      </article>

      <!-- Related Articles Section -->
      <section class="related-section">
        <h2 class="related-title">Continue Reading</h2>
        <div class="related-grid">
          {% for related_article in blog.articles limit: 3 %}
            {% if related_article.id != article.id %}
            <article class="related-card">
              <a href="{{ related_article.url }}" class="related-link">
                <div class="related-image">
                  <img src="{{ related_article.image | img_url: 'large' }}" alt="{{ related_article.title }}">
                  <div class="related-overlay"></div>
                </div>
                <div class="related-content">
                  {% if related_article.tags.size > 0 %}
                  <span class="related-tag">{{ related_article.tags.first }}</span>
                  {% endif %}
                  <h3 class="related-card-title">{{ related_article.title }}</h3>
                  <p class="related-excerpt">{{ related_article.excerpt_or_content | strip_html | truncatewords: 20 }}</p>
                  <div class="related-meta">
                    <span>{{ related_article.created_at | date: "%b %d" }}</span>
                    <span>•</span>
                    <span>5 min read</span>
                  </div>
                </div>
              </a>
            </article>
            {% endif %}
          {% endfor %}
        </div>
      </section>
    </div>
  </div>
</div>

<style>
/*-----------------------------------*\
  #ARTICLE PAGE - FULL PAGE DESIGN
\*-----------------------------------*/

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

.article-page {
  width: 100%;
  min-height: 100vh;
  background: #fafafa;
}

/*-----------------------------------*\
  #HERO SECTION
\*-----------------------------------*/

.article-hero {
  position: relative;
  width: 100%;
  height: 85vh;
  min-height: 600px;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  
}

.hero-background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  z-index: 1;
}

.hero-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.3));
  z-index: 2;
}

.hero-content {
  position: relative;
  z-index: 3;
  text-align: center;
  color: #fff;
  padding: 0 20px;
  max-width: 900px;
  animation: fadeInUp 1s ease;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.hero-tags {
  display: flex;
  gap: 10px;
  justify-content: center;
  margin-bottom: 25px;
  flex-wrap: wrap;
}

.hero-tag {
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10px);
  padding: 8px 18px;
  border-radius: 50px;
  font-size: 1.3rem;
  font-weight: 500;
  letter-spacing: 0.5px;
  border: 1px solid rgba(255, 255, 255, 0.3);
}

.hero-title {
  font-size: clamp(2.8rem, 6vw, 5.5rem);
  font-weight: 800;
  line-height: 1.15;
  margin-bottom: 30px;
  text-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  letter-spacing: -1px;
}

.hero-meta {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15px;
  flex-wrap: wrap;
  font-size: 1.5rem;
  opacity: 0.95;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 8px;
}

.meta-item svg {
  opacity: 0.9;
}

.meta-divider {
  opacity: 0.5;
}

.scroll-indicator {
  position: absolute;
  bottom: 40px;
  left: 50%;
  transform: translateX(-50%);
  z-index: 3;
  animation: bounce 2s infinite;
  color: #fff;
  opacity: 0.8;
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateX(-50%) translateY(0);
  }
  40% {
    transform: translateX(-50%) translateY(-10px);
  }
  60% {
    transform: translateX(-50%) translateY(-5px);
  }
}

/*-----------------------------------*\
  #PROGRESS BAR
\*-----------------------------------*/

.progress-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 4px;
  background: rgba(0, 0, 0, 0.1);
  z-index: 1000;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #4CAF50, #45a049);
  width: 0%;
  transition: width 0.1s ease;
}

/*-----------------------------------*\
  #MAIN CONTENT
\*-----------------------------------*/

.article-wrapper {
  background: #fafafa;
  padding: 80px 0;
}

.article-main {
  max-width: 900px;
  margin: 0 auto;
  padding: 0 20px;
}

.container {
  width: 100%;
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 20px;
}

.article-content {
  background: #fff;
  padding: 60px 40px;

  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
  margin-bottom: 60px;
}

.article-body {
  font-size: 1.9rem;
  line-height: 1.8;
  color: #2c3e50;
}

.article-body p {
  margin-bottom: 28px;
  text-align: justify;
}

.article-body h2 {
  font-size: 3rem;
  font-weight: 700;
  margin: 50px 0 25px;
  color: #1a1a1a;
  line-height: 1.3;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
}

.article-body h3 {
  font-size: 2.4rem;
  font-weight: 600;
  margin: 40px 0 20px;
  color: #1a1a1a;
}

.article-body h4 {
  font-size: 2rem;
  font-weight: 600;
  margin: 30px 0 15px;
  color: #333;
}

.article-body a {
  color: #4CAF50;
  text-decoration: none;
  border-bottom: 2px solid transparent;
  transition: all 0.3s ease;
  font-weight: 500;
}

.article-body a:hover {
  color: #45a049;
  border-bottom-color: #4CAF50;
}

.article-body blockquote {
