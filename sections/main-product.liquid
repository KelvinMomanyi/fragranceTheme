<script>
document.addEventListener('DOMContentLoaded', function() {
  const sectionEl = document.getElementById('product-{{ product.id }}');
  if (!sectionEl) return;

  // Thumbnail gallery
  const thumbnails = sectionEl.querySelectorAll('.thumbnail-btn');
  const mainImage = sectionEl.querySelector('#product-image-main');
  const thumbRail = sectionEl.querySelector('[data-thumb-rail]');
  const thumbPrev = sectionEl.querySelector('[data-thumb-prev]');
  const thumbNext = sectionEl.querySelector('[data-thumb-next]');

  function setActiveThumb(activeBtn) {
    thumbnails.forEach(t => {
      t.classList.toggle('active', t === activeBtn);
      if (t === activeBtn) {
        t.setAttribute('aria-current', 'true');
      } else {
        t.removeAttribute('aria-current');
      }
    });
  }

  thumbnails.forEach(thumb => {
    thumb.addEventListener('click', function() {
      const imageUrl = this.dataset.imageUrl;
      if (mainImage && imageUrl) {
        mainImage.src = imageUrl;
      }
      setActiveThumb(this);
      this.scrollIntoView({ behavior: 'smooth', block: 'center', inline: 'nearest' });
    });
  });

  function updateThumbNav() {
    if (!thumbRail || !thumbPrev || !thumbNext) return;
    const isHorizontal = thumbRail.scrollWidth > thumbRail.clientWidth + 2;
    const maxScroll = isHorizontal
      ? (thumbRail.scrollWidth - thumbRail.clientWidth)
      : (thumbRail.scrollHeight - thumbRail.clientHeight);
    const pos = isHorizontal ? thumbRail.scrollLeft : thumbRail.scrollTop;
    const atStart = pos <= 2;
    const atEnd = pos >= maxScroll - 2;
    thumbPrev.disabled = atStart;
    thumbNext.disabled = atEnd;
  }

  if (thumbRail && thumbPrev && thumbNext) {
    const step = () => {
      const first = thumbRail.querySelector('.thumbnail-btn');
      const styles = getComputedStyle(thumbRail);
      const gap = parseFloat(styles.rowGap || styles.gap || '0') || 0;
      return first ? (first.offsetHeight + gap) : 80;
    };

    thumbPrev.addEventListener('click', () => {
      const isHorizontal = thumbRail.scrollWidth > thumbRail.clientWidth + 2;
      if (isHorizontal) {
        thumbRail.scrollBy({ left: -(step() * 3), behavior: 'smooth' });
      } else {
        thumbRail.scrollBy({ top: -(step() * 3), behavior: 'smooth' });
      }
    });

    thumbNext.addEventListener('click', () => {
      const isHorizontal = thumbRail.scrollWidth > thumbRail.clientWidth + 2;
      if (isHorizontal) {
        thumbRail.scrollBy({ left: (step() * 3), behavior: 'smooth' });
      } else {
        thumbRail.scrollBy({ top: (step() * 3), behavior: 'smooth' });
      }
    });

    thumbRail.addEventListener('scroll', updateThumbNav, { passive: true });
    window.addEventListener('resize', updateThumbNav);
    updateThumbNav();
  }
  
  // Quantity selector
  const quantitySelectors = sectionEl.querySelectorAll('.quantity-selector');
  quantitySelectors.forEach(selector => {
    const input = selector.querySelector('.qty-input');
    const minus = selector.querySelector('.qty-minus');
    const plus = selector.querySelector('.qty-plus');
    
    if (minus) {
      minus.addEventListener('click', () => {
        const value = parseInt(input.value) || 1;
        if (value > 1) input.value = value - 1;
      });
    }
    
    if (plus) {
      plus.addEventListener('click', () => {
        const value = parseInt(input.value) || 1;
        input.value = value + 1;
      });
    }
  });
  
  // Variant selector
  const variantSelects = sectionEl.querySelectorAll('.product-option-select, .swatch-input');
  const variantData = sectionEl.querySelector('#product-variants-{{ section.id }}');
  
  if (variantData) {
    const variants = JSON.parse(variantData.textContent);
    
    function updateVariant() {
      const selectedOptions = [];
      sectionEl.querySelectorAll('.product-option-select').forEach(select => {
        selectedOptions.push(select.value);
      });
      sectionEl.querySelectorAll('.swatch-input:checked').forEach(input => {
        selectedOptions.push(input.value);
      });
      
      const variant = variants.find(v => {
        return v.options.every((opt, i) => opt === selectedOptions[i]);
      });
      
      if (variant) {
        const variantIdInput = sectionEl.querySelector('#product-variant-id');
        if (variantIdInput) variantIdInput.value = variant.id;
        
        // Update price
        const priceWrapper = sectionEl.querySelector('#product-price');
        if (priceWrapper) {
          let priceHtml = '';
          if (variant.compare_at_price > variant.price) {
            priceHtml = `
              <del class="product-compare-price">${Shopify.formatMoney(variant.compare_at_price)}</del>
              <span class="product-price product-price--sale">${Shopify.formatMoney(variant.price)}</span>
              <span class="product-badge badge--sale">Sale</span>
            `;
          } else {
            priceHtml = `<span class="product-price">${Shopify.formatMoney(variant.price)}</span>`;
          }
          priceWrapper.innerHTML = priceHtml;
        }
        
        // Update button state
        const addToCartBtn = sectionEl.querySelector('.add-to-cart-btn');
        if (addToCartBtn) {
          if (variant.available) {
            addToCartBtn.disabled = false;
            addToCartBtn.querySelector('.btn-text').textContent = '{{ "products.product.add_to_cart" | t | default: "Add to cart" }}';
          } else {
            addToCartBtn.disabled = true;
            addToCartBtn.querySelector('.btn-text').textContent = '{{ "products.product.sold_out" | t | default: "Sold out" }}';
          }
        }
        
        // Update main image if variant has featured media
        if (variant.featured_media && mainImage) {
          const newImageUrl = variant.featured_media.preview_image.src.replace(/\.(jpg|png|gif|jpeg)/, '_800x.$1');
          mainImage.src = newImageUrl;
        }
        
        // Update SKU
        const skuElement = sectionEl.querySelector('#product-sku');
        if (skuElement && variant.sku) {
          skuElement.textContent = variant.sku;
        }
      }
    }
    
    variantSelects.forEach(select => {
      select.addEventListener('change', updateVariant);
    });
  }
  
  // Accordion
  const accordions = sectionEl.querySelectorAll('.accordion-item');
  accordions.forEach(accordion => {
    accordion.addEventListener('toggle', function() {
      if (this.open) {
        accordions.forEach(other => {
          if (other !== this) other.open = false;
        });
      }
    });
  });
});
</script>

