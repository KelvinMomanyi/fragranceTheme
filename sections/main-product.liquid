{%- comment -%}
  Main Product Section with Block Architecture
  Meets Shopify Theme Store requirements for:
  - Individual blocks for product elements
  - @app blocks support
  - Custom Liquid blocks
  - Unit pricing, compare-at price, selling plans
  - Pickup availability, Shop Pay Installments
  - Swatch support, variant images
{%- endcomment -%}

{%- liquid
  assign current_variant = product.selected_or_first_available_variant
  assign first_3d_model = product.media | where: "media_type", "model" | first
-%}

{% if template == 'product' %}
  <script type="application/ld+json">
    {
      "@context": "https://schema.org/",
      "@type": "Product",
      "name": {{ product.title | json }},
      "image": [
        {% for image in product.images %}
          {{ image | image_url: width: 1200 | json }}{% unless forloop.last %},{% endunless %}
        {% endfor %}
      ],
      "description": {{ product.description | strip_html | json }},
      "sku": {{ current_variant.sku | json }},
      "brand": {
        "@type": "Brand",
        "name": {{ product.vendor | json }}
      },
      "offers": {
        "@type": "Offer",
        "url": "{{ shop.url }}{{ product.url }}",
        "priceCurrency": {{ cart.currency.iso_code | json }},
        "price": {{ current_variant.price | divided_by: 100.0 | json }},
        "itemCondition": "https://schema.org/NewCondition",
        "availability": "https://schema.org/{% if current_variant.available %}InStock{% else %}OutOfStock{% endif %}",
        "seller": {
          "@type": "Organization",
          "name": {{ shop.name | json }}
        }
      }
    }
  </script>
{% endif %}

<section class="section product-section color-scheme-{{ section.settings.color_scheme }}" style="{% render 'color-scheme-styles', scheme: section.settings.color_scheme %}" id="product-{{ product.id }}">
  <div class="container">
    <div class="product-wrapper">
      
      {%- comment -%} Product Media Gallery {%- endcomment -%}
      <div class="product-media">
        <div class="product-media-main">
          <div class="card-banner img-holder" id="main-product-image">
            {% if current_variant.featured_media %}
              <img 
                src="{{ current_variant.featured_media | image_url: width: 800 }}" 
                alt="{{ current_variant.featured_media.alt | escape | default: product.title }}" 
                class="img-cover product-featured-image"
                loading="eager"
                width="800"
                height="800"
                id="product-image-main"
              >
            {% elsif product.featured_image %}
              <img 
                src="{{ product.featured_image | image_url: width: 800 }}" 
                alt="{{ product.featured_image.alt | escape | default: product.title }}" 
                class="img-cover product-featured-image"
                loading="eager"
                width="800"
                height="800"
                id="product-image-main"
              >
            {% else %}
              {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
          </div>
        </div>
        
        {%- comment -%} Thumbnail Gallery {%- endcomment -%}
        {% if product.images.size > 1 %}
          <div class="product-thumbnails" aria-label="Product media thumbnails">
            <div class="product-thumbnails__controls">
              <button type="button" class="thumb-nav thumb-nav--prev" aria-label="Scroll thumbnails up" data-thumb-prev>
                <ion-icon name="chevron-up"></ion-icon>
              </button>
              <button type="button" class="thumb-nav thumb-nav--next" aria-label="Scroll thumbnails down" data-thumb-next>
                <ion-icon name="chevron-down"></ion-icon>
              </button>
            </div>

            <div class="product-thumbnails__rail" role="list" data-thumb-rail>
              {% for media in product.media %}
                <button
                  type="button"
                  role="listitem"
                  class="thumbnail-btn {% if forloop.first %}active{% endif %}"
                  data-media-id="{{ media.id }}"
                  data-image-url="{{ media | image_url: width: 800 }}"
                  aria-label="View {{ media.alt | default: product.title }}"
                  {% if forloop.first %}aria-current="true"{% endif %}
                >
                  <img
                    src="{{ media | image_url: width: 120 }}"
                    alt="{{ media.alt | escape }}"
                    width="120"
                    height="120"
                    loading="lazy"
                  >
                </button>
              {% endfor %}
            </div>
          </div>
        {% endif %}
      </div>
      
      {%- comment -%} Product Info with Blocks {%- endcomment -%}
      <div class="product-info sticky-content--desktop">
        
        {%- comment -%} Render blocks in order {%- endcomment -%}
        {% for block in section.blocks %}
          {% case block.type %}
          
            {%- comment -%} Title Block {%- endcomment -%}
            {% when 'title' %}
              <div class="product-block product-block--title" {{ block.shopify_attributes }}>
                <h1 class="product-title">{{ product.title }}</h1>
              </div>
            
            {%- comment -%} Vendor Block {%- endcomment -%}
            {% when 'vendor' %}
              <div class="product-block product-block--vendor" {{ block.shopify_attributes }}>
                <p class="product-vendor">
                  <a href="{{ product.vendor | url_for_vendor }}">{{ product.vendor }}</a>
                </p>
              </div>
            
            {%- comment -%} Price Block {%- endcomment -%}
            {% when 'price' %}
              <div class="product-block product-block--price" {{ block.shopify_attributes }}>
                <div class="product-price-wrapper" id="product-price">
                  {%- if current_variant.compare_at_price > current_variant.price -%}
                    <del class="product-compare-price">{{ current_variant.compare_at_price | money }}</del>
                    <span class="product-price product-price--sale">{{ current_variant.price | money }}</span>
                    <span class="product-badge badge--sale">{{ 'products.product.on_sale' | t | default: 'Sale' }}</span>
                  {%- else -%}
                    <span class="product-price">{{ current_variant.price | money }}</span>
                  {%- endif -%}
                  
                  {%- comment -%} Unit Pricing (Required) {%- endcomment -%}
                  {%- if current_variant.unit_price_measurement -%}
                    <div class="product-unit-price">
                      <span class="unit-price">
                        {{ current_variant.unit_price | money }}/{{ current_variant.unit_price_measurement.reference_value }}{{ current_variant.unit_price_measurement.reference_unit }}
                      </span>
                    </div>
                  {%- endif -%}
                </div>
                
                {%- comment -%} Tax-inclusive message (Required) {%- endcomment -%}
                {%- if cart.taxes_included -%}
                  <p class="product-tax-note">{{ 'products.product.include_taxes' | t | default: 'Tax included.' }}</p>
                {%- endif -%}
                
                {%- if shop.shipping_policy.body != blank -%}
                  <p class="product-shipping-note">
                    {{ 'products.product.shipping_policy_html' | t: link: shop.shipping_policy.url | default: 'Shipping calculated at checkout.' }}
                  </p>
                {%- endif -%}
              </div>
            
            {%- comment -%} Description Block {%- endcomment -%}
            {% when 'description' %}
              <div class="product-block product-block--description" {{ block.shopify_attributes }}>
                <div class="product-description rte">
                  {{ product.description }}
                </div>
              </div>
            
            {%- comment -%} Variant Picker Block {%- endcomment -%}
            {% when 'variant_picker' %}
              <div class="product-block product-block--variants" {{ block.shopify_attributes }}>
                {%- unless product.has_only_default_variant -%}
                  <variant-selects 
                    class="product-variants no-js-hidden" 
                    data-section="{{ section.id }}"
                    data-url="{{ product.url }}"
                  >
                    {%- for option in product.options_with_values -%}
                      <div class="product-option">
                        <label class="product-option-label" for="Option-{{ section.id }}-{{ forloop.index0 }}">
                          {{ option.name }}
                        </label>
                        
                        {%- comment -%} Swatch Support for Color options {%- endcomment -%}
                        {%- assign swatch_option_names = 'color,colour,couleur,cor,farbe' | split: ',' -%}
                        {%- assign option_name_downcase = option.name | downcase -%}
                        {%- assign is_color_option = false -%}
                        {%- for swatch_name in swatch_option_names -%}
                          {%- if option_name_downcase contains swatch_name -%}
                            {%- assign is_color_option = true -%}
                            {%- break -%}
                          {%- endif -%}
                        {%- endfor -%}
                        
                        {%- if block.settings.picker_type == 'swatch' and is_color_option -%}
                          <div class="product-option-swatches">
                            {%- for value in option.values -%}
                              {%- assign option_value_handle = value | handleize -%}
                              <label class="swatch-label" for="swatch-{{ section.id }}-{{ forloop.parentloop.index0 }}-{{ forloop.index0 }}">
                                <input 
                                  type="radio" 
                                  id="swatch-{{ section.id }}-{{ forloop.parentloop.index0 }}-{{ forloop.index0 }}"
                                  name="options[{{ option.name | escape }}]"
                                  value="{{ value | escape }}"
                                  {% if option.selected_value == value %}checked{% endif %}
                                  class="swatch-input visually-hidden"
                                >
                                <span 
                                  class="swatch {% if option.selected_value == value %}swatch--selected{% endif %}"
                                  {% if option.values[forloop.index0].swatch.color %}
                                    style="background-color: {{ option.values[forloop.index0].swatch.color }}"
                                  {% elsif option.values[forloop.index0].swatch.image %}
                                    style="background-image: url('{{ option.values[forloop.index0].swatch.image | image_url: width: 50 }}')"
                                  {% else %}
                                    style="background-color: {{ option_value_handle }}"
                                  {% endif %}
                                  title="{{ value }}"
                                >
                                  <span class="visually-hidden">{{ value }}</span>
                                </span>
                              </label>
                            {%- endfor -%}
                          </div>
                        {%- else -%}
                          <select 
                            id="Option-{{ section.id }}-{{ forloop.index0 }}"
                            class="product-option-select"
                            name="options[{{ option.name | escape }}]"
                          >
                            {%- for value in option.values -%}
                              <option 
                                value="{{ value | escape }}" 
                                {% if option.selected_value == value %}selected="selected"{% endif %}
                              >
                                {{ value }}
                              </option>
                            {%- endfor -%}
                          </select>
                        {%- endif -%}
                      </div>
                    {%- endfor -%}
                    
                    <script type="application/json" id="product-variants-{{ section.id }}">
                      {{ product.variants | json }}
                    </script>
                  </variant-selects>
                {%- endunless -%}
              </div>
            
            {%- comment -%} Quantity Selector Block {%- endcomment -%}
            {% when 'quantity_selector' %}
              <div class="product-block product-block--quantity" {{ block.shopify_attributes }}>
                <label class="product-option-label" for="Quantity-{{ section.id }}">
                  {{ 'products.product.quantity.label' | t | default: 'Quantity' }}
                </label>
                <div class="quantity-selector">
                  <button type="button" class="qty-btn qty-minus" aria-label="Decrease quantity">−</button>
                  <input 
                    type="number" 
                    id="Quantity-{{ section.id }}"
                    name="quantity" 
                    min="1" 
                    value="1" 
                    class="qty-input"
                    aria-label="Quantity"
                  >
                  <button type="button" class="qty-btn qty-plus" aria-label="Increase quantity">+</button>
                </div>
              </div>
            
            {%- comment -%} Buy Buttons Block {%- endcomment -%}
            {% when 'buy_buttons' %}
              <div class="product-block product-block--buy-buttons" {{ block.shopify_attributes }}>
                <product-form class="product-form">
                  {%- form 'product', product, id: 'product-form', class: 'form', novalidate: 'novalidate', data-type: 'add-to-cart-form' -%}
                    <input type="hidden" name="id" value="{{ current_variant.id }}" id="product-variant-id">
                    
                    <div class="product-form-buttons">
                      <button
                         type="submit" 
                         name="add" 
                         class="btn btn-primary add-to-cart-btn"
                         {% unless current_variant.available %}disabled{% endunless %}
                         aria-label="{% if current_variant.available %}{{ 'products.product.add_to_cart' | t | default: 'Add to cart' }}{% else %}{{ 'products.product.sold_out' | t | default: 'Sold out' }}{% endif %}"
                       >
                        <span class="btn-text">
                          {%- if current_variant.available -%}
                            {{ 'products.product.add_to_cart' | t | default: 'Add to cart' }}
                          {%- else -%}
                            {{ 'products.product.sold_out' | t | default: 'Sold out' }}
                          {%- endif -%}
                        </span>
                      </button>
                      
                      {%- if block.settings.show_dynamic_checkout -%}
                        <div class="product-form__buttons-dynamic">
                          {{ form | payment_button }}
                        </div>
                      {%- endif -%}
                    </div>
                  {%- endform -%}
                </product-form>
              </div>
            
            {%- comment -%} Selling Plan Block (Subscriptions) {%- endcomment -%}
            {% when 'selling_plan' %}
              {%- if product.selling_plan_groups.size > 0 -%}
                <div class="product-block product-block--selling-plan" {{ block.shopify_attributes }}>
                  <div class="selling-plan-wrapper">
                    {%- for selling_plan_group in product.selling_plan_groups -%}
                      <fieldset class="selling-plan-group">
                        <legend class="selling-plan-group-title">{{ selling_plan_group.name }}</legend>
                        
                        <div class="selling-plan-options">
                          <label class="selling-plan-option">
                            <input 
                              type="radio" 
                              name="selling_plan" 
                              value="" 
                              checked
                              class="selling-plan-radio"
                            >
                            <span>{{ 'products.product.one_time_purchase' | t | default: 'One-time purchase' }}</span>
                          </label>
                          
                          {%- for selling_plan in selling_plan_group.selling_plans -%}
                            <label class="selling-plan-option">
                              <input 
                                type="radio" 
                                name="selling_plan" 
                                value="{{ selling_plan.id }}"
                                class="selling-plan-radio"
                              >
                              <span>{{ selling_plan.name }}</span>
                              {%- if selling_plan.price_adjustments.size > 0 -%}
                                <span class="selling-plan-savings">
                                  {{ selling_plan.price_adjustments[0].value }}% off
                                </span>
                              {%- endif -%}
                            </label>
                          {%- endfor -%}
                        </div>
                      </fieldset>
                    {%- endfor -%}
                  </div>
                </div>
              {%- endif -%}
            
            {%- comment -%} Pickup Availability Block {%- endcomment -%}
            {% when 'pickup_availability' %}
              <div class="product-block product-block--pickup" {{ block.shopify_attributes }}>
                {% render 'pickup-availability', product: product, variant: current_variant %}
              </div>
            
            {%- comment -%} Shop Pay Installments Block {%- endcomment -%}
            {% when 'shop_pay_installments' %}
              <div class="product-block product-block--installments" {{ block.shopify_attributes }}>
                {% render 'shop-pay-installments', product: product %}
              </div>
            
            {%- comment -%} SKU Block {%- endcomment -%}
            {% when 'sku' %}
              {%- if current_variant.sku != blank -%}
                <div class="product-block product-block--sku" {{ block.shopify_attributes }}>
                  <span class="product-sku-label">{{ 'products.product.sku' | t | default: 'SKU' }}:</span>
                  <span class="product-sku-value" id="product-sku">{{ current_variant.sku }}</span>
                </div>
              {%- endif -%}
            
            {%- comment -%} Share Block {%- endcomment -%}
            {% when 'share' %}
              <div class="product-block product-block--share" {{ block.shopify_attributes }}>
                <div class="product-share">
                  <span class="share-label">{{ 'products.product.share' | t | default: 'Share' }}:</span>
                  <div class="share-buttons">
                    <a href="https://www.facebook.com/sharer.php?u={{ shop.url }}{{ product.url }}" target="_blank" rel="noopener" class="share-btn share-btn--facebook" aria-label="Share on Facebook">
                      <ion-icon name="logo-facebook"></ion-icon>
                    </a>
                    <a href="https://twitter.com/intent/tweet?url={{ shop.url }}{{ product.url }}&text={{ product.title | url_encode }}" target="_blank" rel="noopener" class="share-btn share-btn--twitter" aria-label="Share on Twitter">
                      <ion-icon name="logo-twitter"></ion-icon>
                    </a>
                    <a href="https://pinterest.com/pin/create/button/?url={{ shop.url }}{{ product.url }}&media={{ product.featured_image | image_url: width: 1024 }}&description={{ product.title | url_encode }}" target="_blank" rel="noopener" class="share-btn share-btn--pinterest" aria-label="Share on Pinterest">
                      <ion-icon name="logo-pinterest"></ion-icon>
                    </a>
                  </div>
                </div>
              </div>
            
            {%- comment -%} Collapsible Tab Block {%- endcomment -%}
            {% when 'collapsible_tab' %}
              <div class="product-block product-block--collapsible" {{ block.shopify_attributes }}>
                <details class="accordion-item">
                  <summary class="accordion-header">
                    <span class="accordion-title">
                      {%- if block.settings.icon != blank -%}
                        <ion-icon name="{{ block.settings.icon }}"></ion-icon>
                      {%- endif -%}
                      {{ block.settings.heading | default: 'Tab heading' }}
                    </span>
                    <span class="accordion-toggle">+</span>
                  </summary>
                  <div class="accordion-content rte">
                    {{ block.settings.content }}
                    {{ block.settings.page.content }}
                  </div>
                </details>
              </div>
            
            {%- comment -%} Custom Liquid Block {%- endcomment -%}
            {% when 'custom_liquid' %}
              <div class="product-block product-block--custom" {{ block.shopify_attributes }}>
                {{ block.settings.custom_liquid }}
              </div>
            
            {%- comment -%} App Block {%- endcomment -%}
            {% when '@app' %}
              <div class="product-block product-block--app" {{ block.shopify_attributes }}>
                {% render block %}
              </div>
              
          {% endcase %}
        {% endfor %}
        
      </div>
    </div>
    
    {%- comment -%} Product Recommendations {%- endcomment -%}
    <div class="product-recommendations-wrapper">
      <h3 class="section-title">{{ 'products.product.related_products' | t | default: 'You may also like' }}</h3>
      {% render 'related-products', product: product %}
    </div>
    
    {%- comment -%} Complementary Products - Commented out: complementary-products is a section, not a snippet {%- endcomment -%}
    {%- comment -%}
    <div class="complementary-products-wrapper" id="complementary-products">
      {% render 'complementary-products', product: product %}
    </div>
    {%- endcomment -%}
    
  </div>
</section>

<style>
  /* Product page styles — Dawn-aligned layout */
  .product-section {
    --radius-soft: 0px;
    --shadow-soft: none;
    --shadow-soft-2: none;
    --radius-3: 0px;
    --shadow-2: none;
    --shadow-1: none;
  }

  .product-section,
  .product-section * {
    border-radius: 0 !important;
  }

  .product-section .btn {
    font-weight: var(--fw-500);
  }

  .product-wrapper {
    display: grid;
    grid-template-columns: 1fr;
    gap: 48px;
    align-items: start;
  }

  @media (min-width: 750px) {
    .product-wrapper {
      grid-template-columns: 1fr min(50vw, 420px);
      gap: 48px;
    }
  }

  @media (min-width: 1200px) {
    .product-wrapper {
      grid-template-columns: 2fr 1fr;
    }
  }

  .product-media {
    min-width: 0;
  }

  /* Thumbnails beside main image (desktop), below (mobile) */
  @media (min-width: 750px) {
    .product-media {
      display: grid;
      grid-template-columns: minmax(64px, 15%) minmax(0, 1fr);
      gap: 1.8rem;
      align-items: start;
    }

    .product-thumbnails {
      grid-column: 1;
      grid-row: 1;
    }

    .product-media-main {
      grid-column: 2;
      grid-row: 1;
    }

    .product-thumbnails {
      margin-top: 0;
      padding-top: 0;
      border-top: none;
    }
  }

  .product-media-main {
    position: relative;
    overflow: hidden;
    background: var(--cultured);
    border: 1px solid var(--black_10);
    box-shadow: none;
  }

  .product-media-main .img-holder {
    aspect-ratio: 1;
  }

  @media (min-width: 750px) {
    .product-media-main .img-holder {
      aspect-ratio: 4 / 5;
    }
  }

  .product-media-main img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transform: scale(1);
    transition: transform var(--transition-2), filter var(--transition-1);
    will-change: transform;
  }

  @media (hover: hover) {
    .product-media-main:hover img {
      transform: scale(1.04);
      filter: saturate(1.02);
    }
  }

  .product-thumbnails {
    position: relative;
    margin-top: 1.6rem;
    padding-top: 1rem;
    border-top: 1px solid var(--black_10);
  }

  .product-thumbnails::before,
  .product-thumbnails::after {
    content: "";
    position: absolute;
    left: 0;
    right: 0;
    height: 44px;
    pointer-events: none;
    z-index: 1;
  }

  .product-thumbnails::before {
    top: 0;
    background: linear-gradient(to bottom, var(--color-background) 0%, transparent 100%);
  }

  .product-thumbnails::after {
    bottom: 0;
    background: linear-gradient(to top, var(--color-background) 0%, transparent 100%);
  }

  .product-thumbnails__controls {
    position: absolute;
    inset: 0 0 0 0;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    pointer-events: none;
    z-index: 2;
    opacity: 0;
    transition: opacity var(--transition-1);
  }

  .product-thumbnails:is(:hover, :focus-within) .product-thumbnails__controls {
    opacity: 1;
  }

  .thumb-nav {
    pointer-events: auto;
    width: 40px;
    height: 40px;
    display: grid;
    place-content: center;
    background: var(--white);
    border: 1px solid var(--black_10);
    color: var(--smokey-black);
    transition: transform var(--transition-1), opacity var(--transition-1), color var(--transition-1), background var(--transition-1);
    margin-inline: auto;
  }

  .thumb-nav:disabled {
    opacity: 0;
    pointer-events: none;
  }

  .thumb-nav:is(:hover, :focus) {
    color: var(--tan-crayola);
    background: var(--cultured);
    transform: translateY(-1px);
  }

  .product-thumbnails__rail {
    display: grid;
    grid-auto-flow: row;
    grid-auto-rows: 72px;
    gap: 1rem;
    overflow-y: auto;
    overflow-x: hidden;
    padding: 44px 0.4rem;
    scroll-snap-type: y mandatory;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    scroll-behavior: smooth;
    position: relative;
    z-index: 0;

    /* Prevent the column from getting comically tall */
    max-height: clamp(320px, 65vh, 680px);
  }

  @media (min-width: 750px) {
    .product-thumbnails {
      width: 100%;
    }

    .thumbnail-btn {
      width: 100%;
      height: auto;
      aspect-ratio: 1;
    }

    .product-thumbnails__rail {
      grid-auto-rows: auto;
    }
  }

  .product-thumbnails__rail::-webkit-scrollbar {
    display: none;
  }

  .thumbnail-btn {
    width: 72px;
    height: 72px;
    border: 1px solid var(--black_10);
    overflow: hidden;
    cursor: pointer;
    background: var(--white);
    padding: 0;
    box-shadow: none;
    scroll-snap-align: start;
    position: relative;
    transition: transform var(--transition-1), border-color var(--transition-1), box-shadow var(--transition-1);
  }

  .thumbnail-btn img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: grayscale(0.35);
    opacity: 0.85;
    transition: filter var(--transition-1), opacity var(--transition-1), transform var(--transition-1);
  }

  /* On small screens, revert thumbnails to horizontal strip below image */
  @media (max-width: 749px) {
    .product-thumbnails::before,
    .product-thumbnails::after {
      left: 0;
      right: auto;
      top: 1rem;
      bottom: 0;
      width: 44px;
      height: auto;
    }

    .product-thumbnails::before {
      background: linear-gradient(to right, var(--color-background) 0%, transparent 100%);
    }

    .product-thumbnails::after {
