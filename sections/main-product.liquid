<script>
(function() {
document.addEventListener('DOMContentLoaded', function() {
  // Thumbnail gallery
  const thumbnails = document.querySelectorAll('.thumbnail-btn');
  const mainImage = document.getElementById('product-image-main');
  
  thumbnails.forEach(thumb => {
    thumb.addEventListener('click', function() {
      const mediaId = this.dataset.mediaId;
      
      // Update Active Thumbnail
      thumbnails.forEach(t => t.classList.remove('active'));
      this.classList.add('active');

      // Update Active Media
      const mediaItems = document.querySelectorAll('.product-media-item');
      mediaItems.forEach(item => {
        if (item.dataset.mediaId === mediaId) {
          item.classList.add('active');
        } else {
          item.classList.remove('active');
          // Pause videos when switching away
          const video = item.querySelector('video');
          if (video) video.pause();
          const iframe = item.querySelector('iframe');
          if (iframe) {
             // Optional: Post message to pause if API enabled, or just reset src
             const src = iframe.src;
             iframe.src = src; 
          }
        }
      });
    });
  });
  
  // Quantity selector
  const quantitySelectors = document.querySelectorAll('.quantity-selector');
  quantitySelectors.forEach(selector => {
    const input = selector.querySelector('.qty-input');
    const minus = selector.querySelector('.qty-minus');
    const plus = selector.querySelector('.qty-plus');
    
    if (minus) {
      minus.addEventListener('click', () => {
        const value = parseInt(input.value) || 1;
        if (value > 1) input.value = value - 1;
      });
    }
    
    if (plus) {
      plus.addEventListener('click', () => {
        const value = parseInt(input.value) || 1;
        input.value = value + 1;
      });
    }
  });
  
  // Variant selector
  const variantSelects = document.querySelectorAll('.product-option-select, .swatch-input');
  const variantData = document.getElementById('product-variants-{{ section.id }}');
  
  if (variantData) {
    const variants = JSON.parse(variantData.textContent);
    
    function updateVariant() {
      const selectedOptions = [];
      document.querySelectorAll('.product-option-select').forEach(select => {
        selectedOptions.push(select.value);
      });
      document.querySelectorAll('.swatch-input:checked').forEach(input => {
        selectedOptions.push(input.value);
      });
      
      const variant = variants.find(v => {
        return v.options.every((opt, i) => opt === selectedOptions[i]);
      });
      
      if (variant) {
        document.getElementById('product-variant-id').value = variant.id;
        
        // Update price
        const priceWrapper = document.getElementById('product-price');
        if (priceWrapper) {
          let priceHtml = '';
          if (variant.compare_at_price > variant.price) {
            priceHtml = `
              <del class="product-compare-price">${Shopify.formatMoney(variant.compare_at_price)}</del>
              <span class="product-price product-price--sale">${Shopify.formatMoney(variant.price)}</span>
              <span class="product-badge badge--sale">Sale</span>
            `;
          } else {
            priceHtml = `<span class="product-price">${Shopify.formatMoney(variant.price)}</span>`;
          }
          priceWrapper.innerHTML = priceHtml;
        }
        
        // Update button state
        const addToCartBtn = document.querySelector('.add-to-cart-btn');
        if (addToCartBtn) {
          if (variant.available) {
            addToCartBtn.disabled = false;
            addToCartBtn.querySelector('.btn-text').textContent = '{{ "products.product.add_to_cart" | t | default: "Add to cart" }}';
          } else {
            addToCartBtn.disabled = true;
            addToCartBtn.querySelector('.btn-text').textContent = '{{ "products.product.sold_out" | t | default: "Sold out" }}';
          }
        }
        
        // Update main image if variant has featured media
        if (variant.featured_media) {
           const mediaId = variant.featured_media.id;
           // Trigger click on corresponding thumbnail
           const targetThumb = document.querySelector(`.thumbnail-btn[data-media-id="${mediaId}"]`);
           if (targetThumb) targetThumb.click();
        }
        
        // Update SKU
        const skuElement = document.getElementById('product-sku');
        if (skuElement && variant.sku) {
          skuElement.textContent = variant.sku;
        }
      }
    }
    
    variantSelects.forEach(select => {
      select.addEventListener('change', updateVariant);
    });
  }
  
  // Accordion
  const accordions = document.querySelectorAll('.accordion-item');
  accordions.forEach(accordion => {
    accordion.addEventListener('toggle', function() {
      if (this.open) {
        accordions.forEach(other => {
          if (other !== this) other.open = false;
        });
      }
    });
  });

  // Gift Card Recipient Toggle
  const recipientCheckbox = document.getElementById('Recipient-Checkbox-{{ section.id }}');
  const recipientFields = document.getElementById('Recipient-Fields-{{ section.id }}');
  if (recipientCheckbox && recipientFields) {
    recipientCheckbox.addEventListener('change', function() {
      recipientFields.style.display = this.checked ? 'block' : 'none';
    });
  }
});
})();
</script>

