{{ 'application.css' | asset_url | stylesheet_tag }} 
{% if section.settings.image1 != blank %}
  <link rel="preload" as="image" href="{{ section.settings.image1 | image_url }}">
{% else %} 
  <link rel="preload" as="image" href="{{ 'shoe8.jpg' | asset_url }}">
{% endif %}

{% if section.settings.image2 != blank %}
  <link rel="preload" as="image" href="{{ section.settings.image2 | image_url }}">
{% else %}
  <link rel="preload" as="image" href="{{ 'shoes.jpg' | asset_url }}">
{% endif %}

{% if section.settings.image3 != blank %}
  <link rel="preload" as="image" href="{{ section.settings.image3 | image_url }}">
{% else %}
  <link rel="preload" as="image" href="{{ 'shoe16.jpg' | asset_url }}">
{% endif %}


{% if section.settings.image4 != blank %}
  <link rel="preload" as="image" href="{{ section.settings.image4 | image_url }}">
{% else %}
  <link rel="preload" as="image" href="{{ 'shoe16.jpg' | asset_url }}">
{% endif %}

{% if section.settings.image5 != blank %}
  <link rel="preload" as="image" href="{{ section.settings.image5 | image_url }}">
{% else %}
  <link rel="preload" as="image" href="{{ 'shoe16.jpg' | asset_url }}">
{% endif %}

<link rel="preload" as="image" href="{{ 'MainLogo_png.svg' | asset_url }}">


<section class="section hero" id="home" aria-label="home">
  <div class="container">

    <ul class="hero-list">

      <li>
        <div class="hero-card">
         <div class="gradient-overlay">
          <figure class="card-banner img-holder" style="--width: 285; --height: 396;">
            {% if section.settings.image1 != blank %}
               <img src='{{ section.settings.image1 | image_url }}' width="285" height="396" alt="Art Deco Home" class="img-cover">   
             {% else %}
               {{ 'product-1' | placeholder_svg_tag: 'img-cover' }}
              {% endif %} 
          </figure>
          </div>
          <div class="card-content">
            <h3>
              <a href="#" class="card-title">{{ section.settings.title1 | default: "Product" }}</a>
            </h3>
            <a class="btn btn-primary">{{ section.settings.btn_label }}</a>
          </div>

        </div>
      </li>

      <li class="colspan-2">
        <div class="hero-card">
          <div class="gradient-overlay">
           <figure class="card-banner img-holder" style="--width: 568; --height: 389;">
              {% if section.settings.image2 != blank %}
               <img src='{{ section.settings.image2 | image_url }}' width="568" height="389" alt="Helen Chair" class="img-cover">   
             {% else %}
               {{ 'product-2' | placeholder_svg_tag: 'img-cover' }}
              {% endif %}   
           </figure>
          </div>
          <div class="overlay"></div>
          <div class="card-content">
            <h3>
              <a href="#" class="card-title">{{ section.settings.title2 | default: "Product" }}</a>
            </h3>
            <a class="btn btn-primary">{{ section.settings.btn_label }}</a>
          </div>

        </div>
      </li>

      <li>
        <div class="hero-card">
         <div class="gradient-overlay">
          <figure class="card-banner img-holder" style="--width: 285; --height: 396;">
           {% if section.settings.image3 != blank %}
             <img src='{{ section.settings.image3 | image_url }}' width="285" height="396" alt="Vase Of Flowers" class="img-cover">   
           {% else %}
              {{ 'product-3' | placeholder_svg_tag: 'img-cover' }}
           {% endif %}
          </figure>
        </div>
          <div class="card-content">
            <h3>
              <a href="#" class="card-title">{{ section.settings.title3 | default: "Product" }}</a>
            </h3>
            <a class="btn btn-primary">{{ section.settings.btn_label }}</a>
          </div>

        </div>
      </li>

      <li class="colspan-2">
        <div class="hero-card">
         <div class="gradient-overlay">
            <figure class="card-banner img-holder" style="--width: 580; --height: 213;">
              {% if section.settings.image4 != blank %}
                <img src='{{ section.settings.image4 | image_url }}' width="580" height="213" alt="Product Image" class="img-cover">   
              {% else %}
                {{ 'product-4' | placeholder_svg_tag: 'img-cover' }}
               {% endif %}
           </figure>
          </div>
          <div class="card-content">
            <h3>
              <a href="#" class="card-title">Sun di Gioia</a>
            </h3>
            <a class="btn btn-primary">{{ section.settings.btn_label }}</a>
          </div>

        </div>
      </li>

      <li class="colspan-2">
        <div class="hero-card">
          <div class="gradient-overlay">
            <figure class="card-banner img-holder" style="--width: 580; --height: 213;">
              {% if section.settings.image5 != blank %}
                <img src='{{ section.settings.image5 | image_url }}' width="580" height="213" alt="Product Image" class="img-cover">   
              {% else %}
                  {{ 'product-5' | placeholder_svg_tag: 'img-cover' }}
              {% endif %}        
           </figure>
          </div>
          <div class="card-content">
            <h3>
              <a href="#" class="card-title">Bleu de Chanel</a>
            </h3>
            <a class="btn btn-primary">{{ section.settings.btn_label }}</a>
          </div>

        </div>
      </li>

    </ul>

  </div>
</section>

{% schema %}
{
  "name": "hero",
  "settings":[
    {
      "type": "image_picker",
      "id": "image1",
      "label": "Image 1"
    },
    {
      "type": "image_picker",
      "id": "image2",
      "label": "Image 2"
    },
    {
      "type": "image_picker",
      "id": "image3",
      "label": "Image 3"
    },
    {
      "type": "image_picker",
      "id": "image4",
      "label": "Image 4"
    },
    {
      "type": "image_picker",
      "id": "image5",
      "label": "Image 5"
    },
    {
      "type": "text",
      "id": "title1",
      "label": "Title 1",
      "default": "Product"
    },
    {
      "type": "text",
      "id": "title2",
      "label": "Title 2",
      "default":  "Product"
    },
    {
      "type": "text",
      "id": "title3",
      "label": "Title 3",
      "default":  "Product"
    },
    {
      "type": "text",
      "id": "btn_label",
      "label": "Button Label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Button Url"
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "hero"
    }
  ]
}
{% endschema %}