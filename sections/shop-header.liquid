<!-- Preload images dynamically if section blocks are used -->
{% for block in section.blocks %}
  {% if block.settings.hero_image %}
    <link rel="preload" as="image" href="{{ block.settings.hero_image | image_url }}">
  {% endif %}
{% endfor %}

<section class="hero1 text-center" style="min-height: {{ section.settings.min_height }}vh;" aria-label="home" id="home">
  <ul class="hero1-slider" data-hero-slider>
    {% if section.blocks.size == 0 %}
      <li class="slider-item active" data-hero-slider-item style="padding-block-start: 70px;">
        <div class="slider-bg hero1-card has-bg-image" style="background-image: linear-gradient(rgba(0,0,0,{{ section.settings.overlay_opacity }}), rgba(0,0,0,{{ section.settings.overlay_opacity }})), url('{{'collection-1' | placeholder_svg_tag: 'img-cover' }}'); background-attachment: fixed; background-size: cover; background-repeat: no-repeat; background-position: center;"></div>
        <div class="card-content">
          <h1 class="h1 hero1-title slider-reveal">{{ section.settings.default_title }}</h1>
          <p class="price slider-reveal">Starting at {{ section.settings.default_price }}</p>
          <div style="display: flex; justify-content: flex-start;">
            <a href="{{ section.settings.default_link }}" class="btn btn-primary slider-reveal">{{ section.settings.default_button_text }}</a>
          </div>
        </div>
      </li>
    {% else %}
      {% for block in section.blocks %}
        <li class="slider-item {% if forloop.first %}active{% endif %}" data-hero-slider-item style="padding-block-start: 70px;">
          <div class="slider-bg hero1-card has-bg-image" 
              style="background-image: linear-gradient(rgba(0,0,0,{{ section.settings.overlay_opacity }}), rgba(0,0,0,{{ section.settings.overlay_opacity }})), url('{{ block.settings.hero_image | image_url }}'); background-attachment: {% if section.settings.parallax_effect %}fixed{% else %}scroll{% endif %}; background-size: cover; background-repeat: no-repeat; background-position: center;">
          </div>
          <div class="card-content">
            <h1 class="h1 hero1-title slider-reveal">{{ block.settings.brand_name }}</h1>
            <p class="price slider-reveal">Starting at {{ block.settings.starting_price }}</p>
            <div style="display: flex; justify-content: flex-start;">
              <a href="{{ block.settings.shop_now_link }}" class="btn btn-primary slider-reveal">{{ block.settings.shop_now_text }}</a>
            </div>
          </div>
        </li>
      {% endfor %}
    {% endif %}
  </ul>

  {% if section.settings.show_navigation %}
    <button class="slider-btn prev" aria-label="slide to previous" data-prev-btn>
      <ion-icon name="chevron-back"></ion-icon>
    </button>
    <button class="slider-btn next" aria-label="slide to next" data-next-btn>
      <ion-icon name="chevron-forward"></ion-icon>
    </button>
  {% endif %}
</section>

<style>
  /*-----------------------------------*\
    #HERO CUSTOMIZABLE
  \*-----------------------------------*/

  .hero1 .slider-btn { 
    display: {% if section.settings.show_navigation %}block{% else %}none{% endif %}; 
    background-color: {{ section.settings.nav_button_bg }};
    color: {{ section.settings.nav_button_color }};
    opacity: {{ section.settings.nav_button_opacity }};
  }

  .hero1 .slider-btn:hover {
    background-color: {{ section.settings.nav_button_bg_hover }};
    opacity: 1;
  }

  .hero1 {
    position: relative;
    padding-block: {{ section.settings.section_padding_top }}px {{ section.settings.section_padding_bottom }}px;
    min-height: {{ section.settings.min_height }}vh;
    overflow: hidden;
    z-index: 1;
  }

  .hero1 .slider-item {
    position: absolute;
    top: 50%;
    left: 0%;
    transform: translateY(-50%);
    width: 100%;
    height: 100%;
    display: flex;
    align-items: {{ section.settings.content_vertical_alignment }};
    justify-content: {{ section.settings.content_horizontal_alignment }};
    padding-inline-start: {{ section.settings.content_padding_left }}px;
    padding-inline-end: {{ section.settings.content_padding_right }}px;
    padding-block-end: 50px;
    opacity: 0;
    visibility: hidden;
    transition: opacity {{ section.settings.transition_speed }}s ease;
    z-index: 1;
  }

  .hero1 .slider-item.active {
    opacity: 1;
    visibility: visible;
  }

  .hero1 .slider-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    transform: scale(1.15);
    pointer-events: none;
    user-select: none;
    z-index: -1;
  }

  {% if section.settings.enable_zoom_animation %}
  .hero1 .slider-item.active .slider-bg {
    animation: smoothScale {{ section.settings.zoom_duration }}s linear forwards;
  }

  @keyframes smoothScale {
    0% { transform: scale(1); }
    100% { transform: scale(1.15); }
  }
  {% endif %}

  .hero1 .slider-item .card-content {
    color: {{ section.settings.text_color }};
    text-align: {{ section.settings.text_alignment }};
  }

  .hero1 .hero1-title {
    font-size: {{ section.settings.title_font_size }}px;
    color: {{ section.settings.title_color }};
    margin-bottom: {{ section.settings.title_margin_bottom }}px;
  }

  .hero1 .price {
    font-size: {{ section.settings.price_font_size }}px;
    color: {{ section.settings.price_color }};
    margin-bottom: {{ section.settings.price_margin_bottom }}px;
  }

  .hero1 .btn-primary {
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    padding: {{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}px;
    border-radius: {{ section.settings.button_border_radius }}px;
    font-size: {{ section.settings.button_font_size }}px;
  }

  .hero1 .btn-primary:hover {
    background-color: {{ section.settings.button_bg_color_hover }};
    color: {{ section.settings.button_text_color_hover }};
  }

  .slider-reveal {
    transform: translateY({{ section.settings.reveal_distance }}px);
    opacity: 0;
  }

  {% if section.settings.enable_slide_animation %}
  .hero1 .slider-item.active .slider-reveal {
    animation: sliderReveal {{ section.settings.reveal_duration }}s ease forwards;
  }

  @keyframes sliderReveal {
    0% {
      transform: translateY({{ section.settings.reveal_distance }}px);
      opacity: 0;
    }
    100% {
      transform: translateY(0);
      opacity: 1;
    }
  }

  .hero1 .slider-item.active .hero1-title { animation-delay: 0.3s; }
  .hero1 .slider-item.active .price { animation-delay: 0.7s; }
  .hero1 .slider-item.active .btn { animation-delay: 1s; }
  {% endif %}

  /* Navigation Button Styles */
  .hero1 .slider-btn {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: {{ section.settings.nav_button_size }}px;
    height: {{ section.settings.nav_button_size }}px;
    border-radius: {{ section.settings.nav_button_border_radius }}%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    border: none;
    z-index: 10;
    transition: all 0.3s ease;
  }

  .hero1 .slider-btn.prev {
    left: {{ section.settings.nav_button_position }}px;
  }

  .hero1 .slider-btn.next {
    right: {{ section.settings.nav_button_position }}px;
  }

  .hero1 .slider-btn ion-icon {
    font-size: {{ section.settings.nav_icon_size }}px;
  }

  /* Responsive */
  @media screen and (max-width: 575px) {
    .hero1 .slider-item {
      padding-inline-start: {{ section.settings.content_padding_left_mobile }}px;
      padding-inline-end: {{ section.settings.content_padding_right_mobile }}px;
    }
    
    .hero1 .hero1-title {
      font-size: {{ section.settings.title_font_size_mobile }}px;
    }

    .hero1 .price {
      font-size: {{ section.settings.price_font_size_mobile }}px;
    }

    .hero1 .btn-primary {
      font-size: {{ section.settings.button_font_size_mobile }}px;
      padding: {{ section.settings.button_padding_vertical_mobile }}px {{ section.settings.button_padding_horizontal_mobile }}px;
    }
  }

  @media (min-width: 1200px) {
    .hero1 { height: auto; }
  }
</style>

<script>
  const addEventOnElements = function(elements, eventType, callback){
    for(let i = 0, len = elements.length; i < len; i++){
      elements[i].addEventListener(eventType, callback);
    }
  }

  const heroSlider = document.querySelector('[data-hero-slider]');
  const heroSliderItems = document.querySelectorAll("[data-hero-slider-item]");
  const heroSliderPrevBtn = document.querySelector("[data-prev-btn]");
  const heroSliderNextBtn = document.querySelector("[data-next-btn]");

  let currentSlidePos = 0;
  let lastActiveSliderItem = heroSliderItems[0];

  const updateSliderPos = function(){
    lastActiveSliderItem.classList.remove('active');
    heroSliderItems[currentSlidePos].classList.add('active');
    lastActiveSliderItem = heroSliderItems[currentSlidePos];
  }

  const slideNext = function(){
    if(currentSlidePos >= heroSliderItems.length - 1){
      currentSlidePos = 0;
    } else {
      currentSlidePos++;
    }
    updateSliderPos();
  }

  const slidePrev = function(){
    if(currentSlidePos < 1){
      currentSlidePos = heroSliderItems.length - 1;
    } else {
      currentSlidePos--;
    }
    updateSliderPos();
  }

  if(heroSliderPrevBtn && heroSliderNextBtn){
    heroSliderPrevBtn.addEventListener("click", slidePrev);
    heroSliderNextBtn.addEventListener("click", slideNext);
  }

  let autoSlideInterval;
  const autoSlideEnabled = {{ section.settings.enable_autoplay | json }};
  const autoSlideSpeed = {{ section.settings.autoplay_speed | times: 1000 }};

  const autoSlide = function(){
    if(autoSlideEnabled){
      autoSlideInterval = setInterval(function(){
        slideNext();
      }, autoSlideSpeed);
    }
  }

  if(heroSliderNextBtn && heroSliderPrevBtn){
    addEventOnElements([heroSliderNextBtn, heroSliderPrevBtn], 'mouseover', function(){
      clearInterval(autoSlideInterval);
    });

    addEventOnElements([heroSliderNextBtn, heroSliderPrevBtn], 'mouseout', autoSlide);
  }

  window.addEventListener("load", autoSlide);
</script>

