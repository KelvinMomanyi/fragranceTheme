.hero1 .slider-item {
  position: absolute;
  top: 50%; /* Position the content halfway vertically */
  left: 0%; /* Align content to the left */
  transform: translateY(-50%); /* Correct vertical alignment */
  width: 100%;
  height: 100%;
  display: flex; /* Use flexbox for alignment */
  align-items: center; /* Vertically center the content */
  justify-content: start; /* Align content to the start (left) */
  padding-inline-start:130px; /* Adjust left padding */
  padding-block-end: 50px; /* Keep padding at the bottom */
  opacity: 0;
  visibility: hidden;
  transition: var(--transition-3);
  z-index: 1;
}


.hero1 .slider-item.active {
  opacity: 1;
  visibility: visible;
}

.hero1 .slider-bg {
  position: absolute;
  top: 0;
  left: 0;
   width: 100%; 
  height: 100%;
  transform: scale(1.15);
  pointer-events: none;
  user-select: none;
  z-index: -1;
}

.hero1 .slider-item.active .slider-bg {
  animation: smoothScale 7s linear forwards;
}

@keyframes smoothScale {
  0% { transform: scale(1); }
  100% { transform: scale(1.15); }
}

.hero1 .section-subtitle::after { margin-block: 14px 20px; }

.hero1-text { margin-block: 10px 40px; }

