<div class="page-404">
    <div class="content-wrapper">
      <h1 class="error-title">
        {{  "Page Not Found" }}
      </h1>
      <p class="error-message">
        {{  "The page you were looking for does not exist. Try browsing our collections or head back to the homepage." }}
      </p>
      <a href="{{ routes.all_products_collection_url }}" class="btn btn-primary button">
        {{ "Continue Shopping" }}
      </a>
    </div>
  </div>
  
  <style>
  .page-404 {
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    min-height: 100vh;
    background-color: #f4f4f4; /* Light neutral background */
    color: #333; /* Text color for readability */
    padding: 20px;
  }
  
  .content-wrapper {
    max-width: 600px;
    background: #fff;
    border-radius: 10px;
    padding: 40px 20px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
  }
  
  .error-title {
    font-size: 2.5rem;
    font-weight: bold;
    margin-bottom: 20px;
    color: black; /* Attention-grabbing red */
  }
  
  .error-message {
    font-size: 1.2rem;
    line-height: 1.6;
    color: #666; /* Subtle gray for text */
    margin-bottom: 30px;
  }
  
  .button {
    display: inline-block;
    padding: 12px 25px;
    font-size: 1rem;
    font-weight: 600;
    text-decoration: none;
    color: #fff;
    background-color: #007aff; /* Shopify blue */
    border-radius: 5px;
    transition: background-color 0.3s;
  }
  

  </style>
  
  


