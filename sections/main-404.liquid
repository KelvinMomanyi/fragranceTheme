<section class="section section-404" aria-labelledby="error-title">
  <div class="container">
    <div class="content-wrapper">
      <h1 class="error-title" id="error-title">404</h1>
      <h2 class="error-subtitle">{{ 'general.404.title' | t | default: 'Page not found' }}</h2>
      <p class="error-message">
        {{ 'general.404.subtext' | t | default: "The page you're looking for doesn't exist or has been moved." }}
      </p>
      
      {%- comment -%} Search Form (Required for Theme Store) {%- endcomment -%}
      <div class="error-search">
        <form action="{{ routes.search_url }}" method="get" role="search" class="search-form-404">
          <label for="search-404" class="visually-hidden">{{ 'general.search.placeholder' | t | default: 'Search' }}</label>
          <input 
            type="search" 
            id="search-404"
            name="q" 
            class="search-input-404" 
            placeholder="{{ 'general.search.placeholder' | t | default: 'Search our store...' }}"
            aria-label="{{ 'general.search.placeholder' | t | default: 'Search' }}"
          >
          <button type="submit" class="search-btn-404" aria-label="{{ 'general.search.submit' | t | default: 'Search' }}">
            {% render 'icon-fragrance', icon: 'search' %}
          </button>
        </form>
      </div>
      
      {%- comment -%} Navigation Links (Required for Theme Store) {%- endcomment -%}
      <div class="error-links">
        <a href="{{ routes.root_url }}" class="btn btn-primary">
          {{ 'general.404.link' | t | default: 'Back to Home' }}
        </a>
        <a href="{{ routes.all_products_collection_url }}" class="btn btn-secondary">
          {{ 'general.404.browse_products' | t | default: 'Browse Products' }}
        </a>
      </div>
      
      {%- comment -%} Popular Links {%- endcomment -%}
      {% if section.settings.show_popular_links %}
        <div class="popular-links">
          <h3 class="popular-links-title">{{ 'general.404.popular_links' | t | default: 'Popular Pages' }}</h3>
          <ul class="popular-links-list">
            <li><a href="{{ routes.collections_url }}">{{ 'general.404.collections' | t | default: 'Collections' }}</a></li>
            <li><a href="{{ routes.all_products_collection_url }}">{{ 'general.404.products' | t | default: 'All Products' }}</a></li>
            {% if shop.customer_accounts_enabled %}
              <li><a href="{{ routes.account_url }}">{{ 'general.404.account' | t | default: 'My Account' }}</a></li>
            {% endif %}
            <li><a href="{{ routes.cart_url }}">{{ 'general.404.cart' | t | default: 'Cart' }}</a></li>
          </ul>
        </div>
      {% endif %}
    </div>
  </div>
</section>

<style>
  .section-404 {
    min-height: 70vh;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: var(--white);
    padding: var(--section-padding) 15px;
  }
  
  .content-wrapper {
    background: var(--white);
    border-radius: var(--radius-3, 0);
    padding: 60px 40px;
    box-shadow: var(--shadow);
    text-align: center;
  }
  
  .error-title {
    font-size: var(--fs-1);
    font-weight: var(--fw-700);
    color: var(--smokey-black);
    margin: 0;
    line-height: 1;
    font-family: var(--ff-mr_de_haviland);
  }
  
  .error-subtitle {
    font-size: var(--fs-3);
    font-weight: var(--fw-500);
    margin: 15px 0;
    color: var(--smokey-black);
  }
  
  .error-message {
    font-size: var(--fs-5);
    line-height: 1.6;
    color: var(--spanish-gray);
    margin-bottom: 30px;
  }
  
  .error-search {
    margin-bottom: 30px;
  }
  
  .search-form-404 {
    display: flex;
    max-width: 400px;
    margin: 0 auto;
    border: 1px solid var(--black_25);
    border-radius: var(--radius-3, 0);
    overflow: hidden;
    transition: var(--transition-1);
  }
  
  .search-form-404:focus-within {
    border-color: var(--tan-crayola);
  }
  
  .search-input-404 {
    flex: 1;
    padding: 14px 18px;
    border: none;
    font-size: var(--fs-6);
    outline: none;
    color: var(--black);
    background: var(--white);
  }
  
  .search-input-404::placeholder {
    color: var(--spanish-gray);
  }
  
  .search-btn-404 {
    padding: 14px 18px;
    background: var(--white);
    border: none;
    border-left: 1px solid var(--black_25);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: var(--transition-1);
  }
  
  .search-btn-404:hover {
    background: var(--cultured);
  }
  
  .search-btn-404 .icon {
    font-size: 2rem;
    color: var(--black);
  }
  
  .error-links {
    display: flex;
    gap: 15px;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 30px;
  }
  
  .error-links .btn {
    text-decoration: none;
  }
  
  .popular-links {
    padding-top: 25px;
    border-top: 1px solid var(--black_10);
  }
  
  .popular-links-title {
    font-size: var(--fs-6);
    text-transform: uppercase;
    letter-spacing: 1px;
    color: var(--granite-gray);
    margin-bottom: 15px;
    font-weight: var(--fw-500);
  }
  
  .popular-links-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    justify-content: center;
    gap: 20px;
    flex-wrap: wrap;
  }
  
  .popular-links-list a {
    color: var(--spanish-gray);
    text-decoration: none;
    font-weight: var(--fw-500);
    transition: var(--transition-1);
  }
  
  .popular-links-list a:hover {
    color: var(--tan-crayola);
    text-decoration: underline;
  }
  
  @media (max-width: 480px) {
    .content-wrapper {
      padding: 40px 25px;
      box-shadow: none;
    }
    
    .error-title {
      font-size: 5rem;
    }
    
    .error-subtitle {
      font-size: var(--fs-4);
    }
    
    .error-links {
      flex-direction: column;
    }
    
    .error-links .btn {
      width: 100%;
    }
  }
</style>

{% schema %}
{
  "name": "404 Page",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_popular_links",
      "label": "Show popular links",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "404 Page"
    }
  ]
}
{% endschema %}
