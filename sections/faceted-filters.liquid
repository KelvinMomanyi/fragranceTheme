{% comment %}
  Faceted Filtering Section
  Provides filtering by availability, price, type, vendor, and variant options
  Uses Shopify's native filtering system
  Required for Theme Store compliance
{% endcomment %}

{%- liquid
  assign sort_by = collection.sort_by | default: collection.default_sort_by
  assign filter_count = 0
  for filter in collection.filters
    assign filter_count = filter_count | plus: filter.active_values.size
  endfor
-%}

<div class="facets-container" id="main-collection-filters">
  <form class="facets-form" id="FacetFiltersForm">
    <div class="facets-wrapper">
      
      {%- comment -%} Active Filters Summary {%- endcomment -%}
      {% if filter_count > 0 %}
        <div class="active-facets">
          <span class="active-facets__label">{{ filter_count }} filter{% if filter_count > 1 %}s{% endif %} applied:</span>
          <div class="active-facets__list">
            {%- for filter in collection.filters -%}
              {%- for value in filter.active_values -%}
                <a href="{{ value.url_to_remove }}" class="active-facet">
                  <span class="active-facet__label">{{ filter.label }}: {{ value.label }}</span>
                  <span class="active-facet__remove" aria-label="Remove filter">Ã—</span>
                </a>
              {%- endfor -%}
            {%- endfor -%}
            <a href="{{ collection.url }}" class="active-facets__clear">Clear all</a>
          </div>
        </div>
      {% endif %}

      {%- comment -%} Sort By Dropdown {%- endcomment -%}
      <div class="facet-sort">
        <label for="SortBy">Sort by:</label>
        <select name="sort_by" id="SortBy" aria-label="Sort products" onchange="this.closest('form').submit()">
          {%- for option in collection.sort_options -%}
            <option value="{{ option.value }}" {% if option.value == sort_by %}selected="selected"{% endif %}>
              {{ option.name }}
            </option>
          {%- endfor -%}
        </select>
      </div>

      {%- comment -%} Filter Drawers {%- endcomment -%}
      <div class="facets-list">
        {%- for filter in collection.filters -%}
          <details class="facet-drawer" {% if filter.active_values.size > 0 %}open{% endif %}>
            <summary class="facet-drawer__summary">
              <span class="facet-drawer__title">{{ filter.label }}</span>
              <span class="facet-drawer__icon">+</span>
            </summary>
            
            <div class="facet-drawer__content">
              {%- case filter.type -%}
                
                {%- comment -%} List Filters (Type, Vendor, Availability, Variant Options) {%- endcomment -%}
                {%- when 'list' -%}
                  <ul class="facet-list">
                    {%- for value in filter.values -%}
                      <li class="facet-item">
                        <label class="facet-checkbox">
                          <input
                            type="checkbox"
                            name="{{ value.param_name }}"
                            value="{{ value.value }}"
                            {% if value.active %}checked{% endif %}
                            {% if value.count == 0 and value.active == false %}disabled{% endif %}
                            onchange="this.closest('form').submit()"
                          >
                          <span class="facet-checkbox__label">
                            {{ value.label }}
                            <span class="facet-count">({{ value.count }})</span>
                          </span>
                        </label>
                      </li>
                    {%- endfor -%}
                  </ul>

                {%- comment -%} Price Range Filter {%- endcomment -%}
                {%- when 'price_range' -%}
                  <div class="facet-price-range">
                    <div class="price-range-inputs">
                      <div class="price-field">
                        <label for="Filter-{{ filter.label }}-GTE">From</label>
                        <input
                          name="{{ filter.min_value.param_name }}"
                          id="Filter-{{ filter.label }}-GTE"
                          type="number"
                          placeholder="0"
                          min="0"
                          max="{{ filter.range_max | money_without_currency | replace: ',', '' }}"
                          {% if filter.min_value.value %}value="{{ filter.min_value.value | money_without_currency | replace: ',', '' }}"{% endif %}
                        >
                      </div>
                      <span class="price-separator">-</span>
                      <div class="price-field">
                        <label for="Filter-{{ filter.label }}-LTE">To</label>
                        <input
                          name="{{ filter.max_value.param_name }}"
                          id="Filter-{{ filter.label }}-LTE"
                          type="number"
                          placeholder="{{ filter.range_max | money_without_currency | replace: ',', '' }}"
                          min="0"
                          max="{{ filter.range_max | money_without_currency | replace: ',', '' }}"
                          {% if filter.max_value.value %}value="{{ filter.max_value.value | money_without_currency | replace: ',', '' }}"{% endif %}
                        >
                      </div>
                    </div>
                    <button type="submit" class="price-range__button">Apply</button>
                  </div>

              {%- endcase -%}
            </div>
          </details>
        {%- endfor -%}
      </div>

    </div>
  </form>

  {%- comment -%} Product Count {%- endcomment -%}
  <div class="facets-results">
    <p class="facets-count">
      {% if collection.results_count == collection.all_products_count %}
        {{ collection.results_count }} product{% if collection.results_count != 1 %}s{% endif %}
      {% else %}
        Showing {{ collection.results_count }} of {{ collection.all_products_count }} product{% if collection.all_products_count != 1 %}s{% endif %}
      {% endif %}
    </p>
  </div>
</div>

<style>
  :root {
    --facet-smokey-black: hsl(0, 0%, 7%);
    --facet-granite-gray: hsl(0, 0%, 40%);
    --facet-spanish-gray: hsl(0, 0%, 60%);
    --facet-light-gray: hsl(0, 0%, 80%);
    --facet-cultured: hsl(220, 16%, 96%);
    --facet-tan-crayola: hsla(54 0% 31% / 0.46);
    --facet-white: hsl(0, 0%, 100%);
    --facet-transition-1: 0.25s ease;
    --facet-transition-2: 0.5s ease;
  }

  .facets-container {
    margin-bottom: 40px;
    padding: 30px 0;
    border-bottom: 1px solid var(--facet-light-gray);
  }

  /* Active Filters */
  .active-facets {
    background: var(--facet-cultured);
    padding: 20px 25px;
    border-radius: 0;
    margin-bottom: 30px;
    border-left: 3px solid var(--facet-smokey-black);
  }

  .active-facets__label {
    font-weight: 500;
    margin-bottom: 12px;
    display: block;
    color: var(--facet-smokey-black);
    font-size: 1.4rem;
    letter-spacing: 0.5px;
  }

  .active-facets__list {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
    margin-top: 15px;
  }

  .active-facet {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 8px 16px;
    background: var(--facet-white);
    border: 1px solid var(--facet-spanish-gray);
    border-radius: 0;
    text-decoration: none;
    color: var(--facet-smokey-black);
    font-size: 1.4rem;
    transition: all var(--facet-transition-1);
    font-family: 'Cormorant Garamond', sans-serif;
  }

  .active-facet:hover {
    background: var(--facet-smokey-black);
    color: var(--facet-white);
    border-color: var(--facet-smokey-black);
  }

  .active-facet__label {
    font-weight: 400;
  }

  .active-facet__remove {
    font-size: 1.8rem;
    line-height: 1;
    font-weight: 300;
  }

  .active-facets__clear {
    color: var(--facet-smokey-black);
    text-decoration: none;
    font-size: 1.4rem;
    font-weight: 500;
    border-bottom: 1px solid var(--facet-smokey-black);
    padding-bottom: 2px;
    transition: var(--facet-transition-1);
  }

  .active-facets__clear:hover {
    opacity: 0.6;
  }

  /* Sort By Dropdown */
  .facet-sort {
    display: flex;
    align-items: center;
    gap: 15px;
    margin-bottom: 30px;
    justify-content: flex-end;
  }

  .facet-sort label {
    font-weight: 500;
    color: var(--facet-smokey-black);
    font-size: 1.4rem;
    letter-spacing: 0.5px;
  }

  .facet-sort select {
    padding: 10px 16px;
    border: 1px solid var(--facet-light-gray);
    border-radius: 0;
    background: var(--facet-white);
    cursor: pointer;
    font-size: 1.4rem;
    font-family: 'Cormorant Garamond', sans-serif;
    color: var(--facet-smokey-black);
    min-width: 200px;
    transition: var(--facet-transition-1);
  }

  .facet-sort select:hover,
  .facet-sort select:focus {
    border-color: var(--facet-smokey-black);
    outline: none;
  }

  /* Filter Grid */
  .facets-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
    gap: 20px;
    margin-bottom: 30px;
  }

  /* Filter Drawers */
  .facet-drawer {
    border: 1px solid var(--facet-light-gray);
    border-radius: 0;
    overflow: hidden;
    background: var(--facet-white);
    transition: var(--facet-transition-1);
  }

  .facet-drawer:hover {
    border-color: var(--facet-granite-gray);
  }

  .facet-drawer__summary {
    padding: 15px 20px;
    background: var(--facet-cultured);
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    user-select: none;
    transition: var(--facet-transition-1);
  }

  .facet-drawer__summary:hover {
    background: var(--facet-tan-crayola);
  }

  .facet-drawer__title {
    font-weight: 500;
    font-size: 1.5rem;
    color: var(--facet-smokey-black);
    letter-spacing: 0.5px;
  }

  .facet-drawer__icon {
    font-size: 2rem;
    transition: transform var(--facet-transition-1);
    color: var(--facet-granite-gray);
    font-weight: 300;
  }

  .facet-drawer[open] .facet-drawer__icon {
    transform: rotate(45deg);
  }

  .facet-drawer[open] .facet-drawer__summary {
    background: var(--facet-smokey-black);
  }

  .facet-drawer[open] .facet-drawer__title,
  .facet-drawer[open] .facet-drawer__icon {
    color: var(--facet-white);
  }

  .facet-drawer__content {
    padding: 20px;
    background: var(--facet-white);
  }

  /* Filter Lists */
  .facet-list {
    list-style: none;
    padding: 0;
    margin: 0;
    max-height: 250px;
    overflow-y: auto;
  }

  .facet-list::-webkit-scrollbar {
    width: 4px;
  }

  .facet-list::-webkit-scrollbar-track {
    background: var(--facet-cultured);
  }

  .facet-list::-webkit-scrollbar-thumb {
    background: var(--facet-granite-gray);
  }

  .facet-item {
    margin-bottom: 12px;
  }

  .facet-item:last-child {
    margin-bottom: 0;
  }

  .facet-checkbox {
    display: flex;
    align-items: center;
    gap: 10px;
    cursor: pointer;
    transition: var(--facet-transition-1);
    padding: 5px;
    border-radius: 0;
  }

  .facet-checkbox:hover {
    background: var(--facet-cultured);
  }

  .facet-checkbox input[type="checkbox"] {
    width: 18px;
    height: 18px;
    cursor: pointer;
    accent-color: var(--facet-smokey-black);
  }

  .facet-checkbox input[type="checkbox"]:disabled {
    cursor: not-allowed;
    opacity: 0.3;
  }

  .facet-checkbox__label {
    flex: 1;
    font-size: 1.4rem;
    color: var(--facet-granite-gray);
    font-family: 'Cormorant Garamond', sans-serif;
  }

  .facet-count {
    color: var(--facet-spanish-gray);
    font-size: 1.3rem;
  }

  /* Price Range Filter */
  .facet-price-range {
    padding: 10px 0;
  }

  .price-range-inputs {
    display: flex;
    align-items: flex-end;
    gap: 15px;
    margin-bottom: 20px;
  }

  .price-field {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .price-field label {
    font-size: 1.3rem;
    color: var(--facet-granite-gray);
    font-weight: 500;
    letter-spacing: 0.5px;
  }

  .price-field input {
    padding: 10px 12px;
    border: 1px solid var(--facet-light-gray);
    border-radius: 0;
    width: 100%;
    font-size: 1.4rem;
    font-family: 'Cormorant Garamond', sans-serif;
    transition: var(--facet-transition-1);
  }

  .price-field input:focus {
    outline: none;
    border-color: var(--facet-smokey-black);
  }

  .price-separator {
    margin-bottom: 10px;
    color: var(--facet-granite-gray);
    font-weight: 300;
  }

  .price-range__button {
    width: 100%;
    padding: 12px;
    background: var(--facet-smokey-black);
    color: var(--facet-white);
    border: none;
    border-radius: 0;
    cursor: pointer;
    font-weight: 500;
    font-size: 1.4rem;
    font-family: 'Cormorant Garamond', sans-serif;
    letter-spacing: 1px;
    transition: var(--facet-transition-1);
  }

  .price-range__button:hover {
    background: var(--facet-granite-gray);
  }

  /* Product Count */
  .facets-results {
    margin-top: 30px;
    text-align: center;
    padding-top: 20px;
    border-top: 1px solid var(--facet-light-gray);
  }

  .facets-count {
    color: var(--facet-granite-gray);
    font-size: 1.5rem;
    font-weight: 400;
    letter-spacing: 0.5px;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .facets-container {
      padding: 20px 0;
    }

    .facets-list {
      grid-template-columns: 1fr;
    }

    .facet-sort {
      justify-content: space-between;
      width: 100%;
    }

    .facet-sort select {
      min-width: auto;
      flex: 1;
    }

    .active-facets {
      padding: 15px 20px;
    }

    .active-facets__label {
      font-size: 1.3rem;
    }

    .active-facet {
      font-size: 1.3rem;
      padding: 6px 12px;
    }
  }

  @media (max-width: 480px) {
    .price-range-inputs {
      flex-direction: column;
      align-items: stretch;
    }

    .price-separator {
      display: none;
    }
  }
</style>

<script>
  // Auto-submit form when filters change
  document.getElementById('FacetFiltersForm').addEventListener('change', function(e) {
    if (e.target.type === 'checkbox') {
      this.submit();
    }
  });
</script>

{% schema %}
{
  "name": "Faceted filters",
  "settings": [],
  "presets": [
    {
      "name": "Faceted filters"
    }
  ]
}
{% endschema %}
