<div class="page-width">
  <h1 class="main-page-title page-title h0">
    {{ page.title | escape }}
  </h1>
  <div class="rte">
    {{ page.content }}
  </div>
</div>

<style>
  .page-width {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }
  .main-page-title {
    margin-bottom: 3rem;
    text-align: left;
  }
  @media screen and (min-width: 750px) {
    .page-width {
      padding: 0 5rem;
    }
  }
</style>  
{% schema %}
{
  "name": "t:sections.main-page.name",
  "tag": "section",
  "class": "section",
  "settings": []
}
{% endschema %} 
