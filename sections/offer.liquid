<!--OFFER-->
<section class="section offer color-scheme-{{ section.settings.color_scheme }}" style="{% render 'color-scheme-styles', scheme: section.settings.color_scheme %}" id="offer" aria-label="offer" data-aos="fade-up">
    <div class="container">
      <figure class="offer-banner">
      
        {% if section.settings.image2 != blank %}
          <img src="{{ section.settings.image2 | image_url: width: 610 }}" 
            srcset="{{ section.settings.image2 | image_url: width: 305 }} 305w,
                    {{ section.settings.image2 | image_url: width: 610 }} 610w"
            sizes="(max-width: 480px) 100vw, 305px"
            alt="offer products" width="305" height="405" class="w-100" loading="lazy">    
        {% else %}
          <div class="offer-placeholder">
            {{ 'lifestyle-1' | placeholder_svg_tag: 'offer-placeholder-svg' }}
          </div>
        {% endif %}  
        {% if section.settings.image1 != blank %}
           <img src="{{ section.settings.image1 | image_url: width: 610 }}" 
             srcset="{{ section.settings.image1 | image_url: width: 305 }} 305w,
                     {{ section.settings.image1 | image_url: width: 610 }} 610w"
             sizes="(max-width: 480px) 100vw, 305px"
             alt="offer products" width="305" height="405" class="w-100" loading="lazy">    
        {% else %}
           <div class="offer-placeholder">
             {{ 'lifestyle-2' | placeholder_svg_tag: 'offer-placeholder-svg' }}
           </div>
        {% endif %} 
      </figure>
    
      <div class="offer-content">
        <p class="offer-subtitle">
            <span class="span">Special Offer</span>
            <span class="badge" aria-label="20% off">
                {{ section.settings.percent_offer }}
            </span>
        </p>
        {% if section.settings.select_product != blank %}
          <h2 class="h2-large section-title">
            {{ section.settings.select_product.title }}
          </h2>
        {% else %}
          <h2 class="h2-large section-title">
            Dior Sauvage
          </h2>
        {% endif %}
        
        {% if section.settings.product_desc %}
          <p>
           {{section.settings.product_desc }}
          </p> 
        {% else %} 
         <p class="section-text">
          Conceived as an ode to nature, Sauvage is an act of creation inspired by wide-open spaces. Compositions marked by raw freshness, combining power and nobility.
         </p>
        {% endif %}


        <div ></div>
        <a href="#" class="btn btn-primary"> Get Only {{ section.settings.offer_price }}</a>
      </div>
      
    </div>          
</section>



<style>
  .offer-placeholder {
    width: 100%;
    aspect-ratio: 305 / 405;
    background-color: #d4d4d4;
    display: flex;
    position: relative;
    overflow: hidden;
  }

  .offer-placeholder svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
    position: absolute;
    top: 0;
    left: 0;
  }
</style>




{% schema %}
{
  "name": "Offer",
  "settings": [
    {
      "type": "color_scheme","id": "color_scheme","label": "Color scheme","default": "scheme-1"
    },
    {
     "type": "image_picker",
     "id": "image1",
     "label": "Image 1"
    },
    {
     "type": "image_picker",
     "id": "image2",
     "label": "Image 2"
    },
    {
      "type":"text",
      "id":"percent_offer",
      "label":"Percentage Offer",
      "default":"-20%"
    },
    {
      "type": "product",
      "id": "select_product",
      "label": "Select Product"
    },
    {
     "type":"text",
     "id":"product_desc",
     "label":"Product Description",
     "default":"Conceived as an ode to nature, Sauvage is an act of creation inspired by wide-open spaces. Compositions marked by raw freshness, combining power and nobility."    
    },
    {
      "type":"text",
      "id":"offer_price",
      "label":"Offer price",
      "default":"$39"
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Offer"
    }
  ]
}
{% endschema %}
