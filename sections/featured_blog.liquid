<section class="section recommended color-scheme-{{ section.settings.color_scheme | default: '1' }}" aria-label="recommended post">
    <div class="container">

      <p class="section-subtitle">
        <strong class="strong">Recommended</strong>
      </p>

      <ul class="grid-list">
       {% assign selected_blog_handle = section.settings.blog_type %}
        {% if selected_blog_handle %}
          {% for article in blogs[selected_blog_handle].articles %}
            <li>
              <div class="blog-card">
    
                <figure class="card-banner img-holder" style="--width: 300; --height: 360;">
                  <img src="{{ article.image | img_url: 'medium' }}" width="300" height="360" loading="lazy"
                    alt="The trick to getting more done is to have the freedom to roam around " class="img-cover">
                </figure>
    
                <div class="card-content">
    
                  <h3 class="h4">
                    <a href="#" class="card-title hover:underline">
                      {{ article.title }}
                    </a>
                  </h3>
    
                </div>
    
              </div>
            </li>
          {% endfor %}
        {% else %}    
        {% for article in blogs['recommended'].articles %}
          <li>
          <div class="blog-card">

            <figure class="card-banner img-holder" style="--width: 300; --height: 360;">
              <img src="{{ article.image | img_url: 'medium' }}" width="300" height="360" loading="lazy"
                alt="The trick to getting more done is to have the freedom to roam around " class="img-cover">
            </figure>

            <div class="card-content">

              <h3 class="h4">
                <a href="#" class="card-title hover:underline">
                  {{ article.title }}
                </a>
              </h3>

            </div>

          </div>
          </li>
        {% endfor  %} 
    {%  endif %}
      </ul>

    </div>
  </section>


{% schema %}
  {
    "name": "featured-blog",
    "settings": [
        {
          "type": "select",
          "id": "color_scheme",
          "label": "Color scheme",
          "options": [
            { "value": "1", "label": "Scheme 1" },
            { "value": "2", "label": "Scheme 2" },
            { "value": "3", "label": "Scheme 3" },
            { "value": "4", "label": "Scheme 4" },
            { "value": "5", "label": "Scheme 5" }
          ],
          "default": "1"
        },
        {
        "type":"text",
        "id":"heading_text",
        "label":"Blog Heading",
        "default":"More to Discover"
        },
        {
        "type": "blog",
        "id": "blog_type",
        "label": "Select Blog Category",
        }
    ],
    "blocks": [],
    "presets": [
        {
        "name": "featured-blog"
        }
    ]
  }
{% endschema %}