<div class="password-page">
  <div class="password-header">
    {% if section.settings.logo != blank %}
      <img src="{{ section.settings.logo | image_url: width: 600 }}" 
           srcset="{{ section.settings.logo | image_url: width: 300 }} 300w,
                   {{ section.settings.logo | image_url: width: 600 }} 600w"
           sizes="300px"
           alt="{{ shop.name }}" class="password-logo">
    {% else %}
      <h1 class="h2">{{ shop.name }}</h1>
    {% endif %}
  </div>

  <div class="password-content">
    {% if shop.password_message != blank %}
      <div class="password-message">
        {{ shop.password_message }}
      </div>
    {% endif %}

    <h2 class="password-heading">{{ 'general.password_page.login_form_heading' | t | default: 'Enter store using password' }}</h2>
    
    {% form 'storefront_password' %}
      {{ form.errors | default_errors }}
      <div class="password-form-field">
        <label for="password" class="visually-hidden">Password</label>
        <input type="password" name="password" id="password" placeholder="Your password">
        <button type="submit" class="btn btn-primary">Enter</button>
      </div>
    {% endform %}
    
    <div class="password-footer">
      <p>{{ 'general.password_page.admin_link_html' | t | default: 'Are you the store owner? <a href="/admin">Log in here</a>' }}</p>
    </div>
  </div>
</div>

<style>
  .password-page {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    padding: 2rem;
    text-align: center;
  }
  .password-header { margin-bottom: 2rem; }
  .password-message { margin-bottom: 2rem; font-style: italic; }
  .password-form-field { margin-top: 1rem; display: flex; gap: 10px; justify-content: center; }
  .password-footer { margin-top: 3rem; font-size: 0.9em; }
</style>

