<!-- /templates/customers/login.liquid -->
  <div class="mainlogin-container">
    <div class="login-container">
        {% form 'customer_login' %}
            {{ form.errors | default_errors }}
        
            <div class="email">
            <label for="email">Email</label>
            <input type="email" name="customer[email]">
            </div>
        
            <div class="password">
            <label for="password">Password</label>
            <input type="password" name="customer[password]">
            </div>
        
            <div class="submit">
              <input type="submit" value="Sign in" class="btn-primary">
            </div>
        {% endform %}
        <div style="display:flex; flex:1; justify-content:center; align-items:center; gap:10px">
            <p style="font-size:1.5rem;">Not a member? </p>
            <a href="/account/register" style="margin-bottom:8px;" >Create an account</a>
        </div>
    </div>
  </div>

<style>
    .mainlogin-container{
        display: flex;
        justify-content: center;
        flex-direction:column;
        align-items: center;
        padding:1rem;
        margin-top:1rem
    }
   
    .login-container {
        background-color: #fff;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 600px;
    }
    .login-container h1 {
        font-size: 1.5rem;
        margin-bottom: 1rem;
        text-align: center;
    }
    .login-container input {
        width: 100%;
        padding: 0.75rem;
        margin-bottom: 1rem;
        border: 1px solid #ccc;
        border-radius: 4px;
    }
    .login-container button {
        width: 100%;
        padding: 0.75rem;
        background-color: #333;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }
    .login-container button:hover {
        background-color: #555;
    }
    .login-container a {
        color: #007BFF;
        text-decoration: none;
        display: block;
        text-align: center;
        margin-top: 1rem;
    }
</style>