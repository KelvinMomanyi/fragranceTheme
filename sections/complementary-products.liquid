{% comment %}
  Complementary Products Section
  Displays products that pair well with the current product
  Uses Shopify's complementary products API
{% endcomment %}

<div class="complementary-products">
  {% if product.id %}
    <product-recommendations
      data-url="{{ routes.product_recommendations_url }}?section_id={{ section.id }}&product_id={{ product.id }}&limit={{ section.settings.product_limit }}&intent=complementary"
    >
      {% if recommendations.performed and recommendations.products_count > 0 %}
        <div class="container">
          <h2 class="complementary-heading">{{ section.settings.heading }}</h2>
          <p class="complementary-description">{{ section.settings.description }}</p>
          
          <div class="complementary-grid">
            {% for complementary_product in recommendations.products %}
              <div class="complementary-card">
                <a href="{{ complementary_product.url }}" class="complementary-link">
                  {% if complementary_product.featured_image %}
                    <img
                      src="{{ complementary_product.featured_image | image_url: width: 300 }}"
                      alt="{{ complementary_product.featured_image.alt | escape }}"
                      class="complementary-image"
                      loading="lazy"
                      width="300"
                      height="{{ 300 | divided_by: complementary_product.featured_image.aspect_ratio | ceil }}"
                    >
                  {% endif %}
                  <div class="complementary-content">
                    <h3 class="complementary-title">{{ complementary_product.title }}</h3>
                    <div class="complementary-price">
                      {{ complementary_product.price | money }}
                    </div>
                  </div>
                </a>
              </div>
            {% endfor %}
          </div>
        </div>
      {% endif %}
    </product-recommendations>
  {% endif %}
</div>

<script>
  class ProductRecommendations extends HTMLElement {
    constructor() {
      super();
      this.fetchRecommendations();
    }

    fetchRecommendations() {
      const url = this.dataset.url;
      fetch(url)
        .then(response => response.text())
        .then(text => {
          const html = new DOMParser().parseFromString(text, 'text/html');
          const recommendations = html.querySelector('product-recommendations');
          if (recommendations && recommendations.innerHTML.trim().length) {
            this.innerHTML = recommendations.innerHTML;
          }
        })
        .catch(error => {
          console.error('Error loading complementary products:', error);
        });
    }
  }

  customElements.define('product-recommendations', ProductRecommendations);
</script>

<style>
  .complementary-products {
    padding: 40px 0;
    background: #f9f9f9;
  }

  .complementary-heading {
    text-align: center;
    font-size: 1.8em;
    margin-bottom: 10px;
  }

  .complementary-description {
    text-align: center;
    color: #666;
    margin-bottom: 30px;
  }

  .complementary-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 20px;
  }

  .complementary-card {
    background: white;
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.3s;
  }

  .complementary-card:hover {
    transform: translateY(-5px);
  }

  .complementary-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .complementary-image {
    width: 100%;
    height: auto;
    object-fit: cover;
  }

  .complementary-content {
    padding: 15px;
  }

  .complementary-title {
    font-size: 1em;
    margin-bottom: 8px;
  }

  .complementary-price {
    font-weight: 600;
    color: #111;
  }
</style>

{% schema %}
{
  "name": "Complementary products",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Pairs well with"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description",
      "default": "Complete your look with these complementary products"
    },
    {
      "type": "range",
      "id": "product_limit",
      "min": 2,
      "max": 10,
      "step": 1,
      "label": "Maximum products to show",
      "default": 4
    }
  ],
  "presets": [
    {
      "name": "Complementary products"
    }
  ]
}
{% endschema %}
