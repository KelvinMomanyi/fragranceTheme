<div class="complementary-products section-{{ section.id }} color-scheme-{{ section.settings.color_scheme }}">
  {% if product.id %}
    <product-recommendations
      data-url="{{ routes.product_recommendations_url }}?section_id={{ section.id }}&product_id={{ product.id }}&limit={{ section.settings.product_limit }}&intent=complementary"
    >
      {% if recommendations.performed and recommendations.products_count > 0 %}
        <div class="container">
          {%- if section.settings.heading != blank -%}
            <h2 class="section-title">{{ section.settings.heading }}</h2>
          {%- endif -%}
          {%- if section.settings.description != blank -%}
            <p class="complementary-description">{{ section.settings.description }}</p>
          {%- endif -%}
          
          <div class="complementary-grid">
            {% for complementary_product in recommendations.products %}
              <div class="complementary-card">
                <a href="{{ complementary_product.url }}" class="complementary-link">
                  <div class="complementary-image-wrapper">
                    {% if complementary_product.featured_image %}
                      <img
                        src="{{ complementary_product.featured_image | image_url: width: 400 }}"
                        alt="{{ complementary_product.featured_image.alt | escape }}"
                        class="complementary-image"
                        loading="lazy"
                        width="400"
                        height="400"
                      >
                    {% else %}
                       {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                    {% endif %}
                  </div>
                  <div class="complementary-content">
                    <h3 class="complementary-title">{{ complementary_product.title }}</h3>
                    <div class="complementary-price">
                      {{ complementary_product.price | money }}
                    </div>
                  </div>
                </a>
              </div>
            {% endfor %}
          </div>
        </div>
      {% endif %}
    </product-recommendations>
  {% endif %}
</div>

<script>
(function() {
  if (!customElements.get('product-recommendations')) {
    class ProductRecommendations extends HTMLElement {
      constructor() {
        super();
        this.fetchRecommendations();
      }

      fetchRecommendations() {
        const url = this.dataset.url;
        fetch(url)
          .then(response => response.text())
          .then(text => {
            const html = new DOMParser().parseFromString(text, 'text/html');
            const recommendations = html.querySelector('product-recommendations');
            if (recommendations && recommendations.innerHTML.trim().length) {
              this.innerHTML = recommendations.innerHTML;
            }
          })
          .catch(error => {
            console.error('Error loading complementary products:', error);
          });
      }
    }

    customElements.define('product-recommendations', ProductRecommendations);
  }
})();
</script>

<style>
  .complementary-products {
    padding: var(--section-padding) 0;
    background: var(--white);
  }

  .section-title {
    font-family: var(--ff-mr_de_haviland);
    font-size: 3rem;
    font-weight: 500;
    margin-bottom: 10px;
    text-align: center;
    color: var(--color-text);
  }

  .complementary-description {
    text-align: center;
    color: var(--granite-gray);
    margin-bottom: 40px;
    font-family: var(--ff-roboto);
    max-width: 600px;
    margin-inline: auto;
  }

  .complementary-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
  }

  @media (min-width: 768px) {
    .complementary-grid {
      grid-template-columns: repeat(4, 1fr);
      gap: 30px;
    }
  }

  .complementary-card {
    background: var(--white);
    border-radius: var(--radius-3, 12px);
    overflow: hidden;
    transition: var(--transition-1);
    box-shadow: var(--shadow);
    border: 1px solid var(--light-gray);
  }

  .complementary-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-2);
    border-color: var(--tan-crayola);
  }

  .complementary-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .complementary-image-wrapper {
    aspect-ratio: 1;
    overflow: hidden;
    background: var(--cultured);
  }

  .complementary-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: var(--transition-1);
  }

  .complementary-card:hover .complementary-image {
    transform: scale(1.05);
  }

  .complementary-content {
    padding: 15px;
    text-align: center;
  }

  .complementary-title {
    font-size: 1.1rem;
    margin-bottom: 8px;
    font-family: var(--ff-roboto);
    color: var(--color-text);
    font-weight: 500;
  }

  .complementary-price {
    font-weight: 600;
    color: var(--tan-crayola);
    font-family: var(--ff-roboto);
  }

  .placeholder-svg {
    width: 100%;
    height: 100%;
    background: var(--cultured);
  }
</style>

{% schema %}
{
  "name": "Complementary products",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Pairs well with"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description",
      "default": "Complete your look with these complementary products"
    },
    {
      "type": "range",
      "id": "product_limit",
      "min": 2,
      "max": 10,
      "step": 1,
      "label": "Maximum products to show",
      "default": 4
    }
  ],
  "presets": [
    {
      "name": "Complementary products"
    }
  ]
}
{% endschema %}
