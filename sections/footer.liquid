<!--
FOOTER
-->
<footer class="footer">
  <div class="container">

    <div class="footer-top section">

      <div class="footer-brand">

        <a href="#" class="logo">{{ section.settings.logo_text | default: 'Fragrance' }}</a>

        <ul>

          {%- if section.settings.show_address -%}
          <li class="footer-list-item">
            <ion-icon name="location-sharp" aria-hidden="true"></ion-icon>

            <address class="address">
              {{ section.settings.address_text }}
            </address>
          </li>
          {%- endif -%}

          {%- if section.settings.show_phone -%}
          <li class="footer-list-item">
            <ion-icon name="call-sharp" aria-hidden="true"></ion-icon>

            <a href="tel:{{ section.settings.phone_number }}" class="footer-link">{{ section.settings.phone_display }}</a>
          </li>
          {%- endif -%}

          {%- if section.settings.show_social -%}
          <li>
            <ul class="social-list">

              {%- if section.settings.social_facebook != blank -%}
              <li>
                <a href="{{ section.settings.social_facebook }}" class="social-link" target="_blank" rel="noopener">
                  <ion-icon name="logo-facebook"></ion-icon>
                </a>
              </li>
              {%- endif -%}

              {%- if section.settings.social_instagram != blank -%}
              <li>
                <a href="{{ section.settings.social_instagram }}" class="social-link" target="_blank" rel="noopener">
                  <ion-icon name="logo-instagram"></ion-icon>
                </a>
              </li>
              {%- endif -%}

              {%- if section.settings.social_tiktok != blank -%}
              <li>
                <a href="{{ section.settings.social_tiktok }}" class="social-link" target="_blank" rel="noopener">
                  <ion-icon name="logo-tiktok"></ion-icon>
                </a>
              </li>
              {%- endif -%}

              {%- if section.settings.social_tumblr != blank -%}
              <li>
                <a href="{{ section.settings.social_tumblr }}" class="social-link" target="_blank" rel="noopener">
                  <ion-icon name="logo-tumblr"></ion-icon>
                </a>
              </li>
              {%- endif -%}

              {%- if section.settings.social_twitter != blank -%}
              <li>
                <a href="{{ section.settings.social_twitter }}" class="social-link" target="_blank" rel="noopener">
                  <ion-icon name="logo-twitter"></ion-icon>
                </a>
              </li>
              {%- endif -%}

              {%- if section.settings.social_youtube != blank -%}
              <li>
                <a href="{{ section.settings.social_youtube }}" class="social-link" target="_blank" rel="noopener">
                  <ion-icon name="logo-youtube"></ion-icon>
                </a>
              </li>
              {%- endif -%}

            </ul>
          </li>
          {%- endif -%}

        </ul>

      </div>

    {%- if section.settings.show_quick_links -%}
    <ul class="footer-list">

      <li>
      <p class="footer-list-title">{{ section.settings.quick_links_title }}</p>
      </li>

      {%- if section.settings.quick_links_menu != blank -%}
        {% assign quick_nav_links = linklists[section.settings.quick_links_menu].links %}
        {% for link in quick_nav_links %}
          <li>
            <a href="{{ link.url }}" class="footer-link">{{ link.title }}</a>
          </li>
        {% endfor %}
      {%- else -%}
        <li>
        <a href="#" class="footer-link">Home</a>
        </li>

        <li>
        <a href="#" class="footer-link">Shop</a>
        </li>

        <li>
        <a href="#" class="footer-link">Blog</a>
        </li>

        <li>
        <a href="#" class="footer-link">Terms & Conditions</a>
        </li>
      {%- endif -%}

      </ul>
      {%- endif -%}

      {%- if section.settings.show_about_links -%}
      <ul class="footer-list">
        <li>
          <p class="footer-list-title">{{ section.settings.about_links_title }}</p>
        </li>
        {%- if section.settings.about_links_menu != blank -%}
          {% assign nav_links = linklists[section.settings.about_links_menu].links %}
          {% for link in nav_links %}
            <li class="navbar-item">
              <a
                href="{{ link.url }}"
                class="footer-link"
                data-nav-link>{{ link.title }}</a>
            </li>
          {% endfor %}
        {%- endif -%}
      </ul>
      {%- endif -%}

      {%- if section.settings.show_newsletter -%}
      <div class="footer-list">

        <p class="footer-list-title">{{ section.settings.newsletter_title }}</p>

        {%- if section.settings.newsletter_description != blank -%}
        <p class="newsletter-description">{{ section.settings.newsletter_description }}</p>
        {%- endif -%}

        <form action="" class="footer-form">
          <input
            type="email"
            name="email_address"
            placeholder="{{ section.settings.newsletter_placeholder }}"
            required
            class="email-field">

          <button type="submit" class="footer-form-btn">
            <ion-icon name="arrow-forward" aria-hidden="true"></ion-icon>
          </button>
        </form>

        {%- if section.settings.show_footer_links -%}
        <div class="wrapper">

          {%- if section.settings.terms_link != blank -%}
          <a href="{{ section.settings.terms_link }}" class="footer-link">{{ section.settings.terms_text }}</a>
          {%- endif -%}

          {%- if section.settings.policy_link != blank -%}
          <a href="{{ section.settings.policy_link }}" class="footer-link">{{ section.settings.policy_text }}</a>
          {%- endif -%}

          {%- if section.settings.map_link != blank -%}
          <a href="{{ section.settings.map_link }}" class="footer-link">{{ section.settings.map_text }}</a>
          {%- endif -%}

        </div>
        {%- endif -%}

      </div>
      {%- endif -%}

    </div>

    <div class="footer-bottom">

      <p class="copyright">
        &copy;
        <a href="#" class="copyright-link">{{ section.settings.copyright_text | default: 'Fragrance' }}</a>.
        <span id="year"></span>
        {%- if section.settings.show_powered_by -%}
        {{ section.settings.powered_by_text }}
        {%- endif -%}

      </p>
      <div class="footer__column--info">
        {%- if section.settings.payment_enable -%}
          <div class="footer__payment">
            <ul class="list list-payment" role="list">
              {%- for type in shop.enabled_payment_types -%}
                <li class="list-payment__item">
                  {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
                </li>
              {%- endfor -%}
            </ul>
          </div>
        {%- endif -%}
      </div>

    </div>

  </div>
</footer>


<script>
  document.getElementById("year").textContent = new Date().getFullYear();
</script>


