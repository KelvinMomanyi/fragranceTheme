<!--
FOOTER
-->
<footer class="footer color-scheme-{{ section.settings.color_scheme }}" style="{% render 'color-scheme-styles', scheme: section.settings.color_scheme %}">
  <div class="container">

    {{- '<!-- CHANGE 4: Restored section class on footer-top div.
         Safe now that .section is padding-only (not a grid).
         This gives the footer top the correct section padding. -->' -}}
    <div class="footer-top section">

      <div class="footer-brand">

        <a href="#" class="logo">{{ section.settings.logo_text | default: 'Velour' }}</a>

        {%- if section.settings.show_social -%}
          <ul class="social-list">
            {%- if settings.social_facebook != blank -%}
              <li>
                <a href="{{ settings.social_facebook }}" class="social-link" target="_blank" rel="noopener" aria-label="Facebook">
                  {% render 'icon-velour', icon: 'facebook', size: 'small' %}
                </a>
              </li>
            {%- endif -%}

            {%- if settings.social_instagram != blank -%}
              <li>
                <a href="{{ settings.social_instagram }}" class="social-link" target="_blank" rel="noopener" aria-label="Instagram">
                  {% render 'icon-velour', icon: 'instagram', size: 'small' %}
                </a>
              </li>
            {%- endif -%}

            {%- if settings.social_tiktok != blank -%}
              <li>
                <a href="{{ settings.social_tiktok }}" class="social-link" target="_blank" rel="noopener" aria-label="TikTok">
                  {% render 'icon-velour', icon: 'tiktok', size: 'small' %}
                </a>
              </li>
            {%- endif -%}

            {%- if settings.social_tumblr != blank -%}
              <li>
                <a href="{{ settings.social_tumblr }}" class="social-link" target="_blank" rel="noopener" aria-label="Tumblr">
                  {% render 'icon-velour', icon: 'tumblr', size: 'small' %}
                </a>
              </li>
            {%- endif -%}

            {%- if settings.social_twitter != blank -%}
              <li>
                <a href="{{ settings.social_twitter }}" class="social-link" target="_blank" rel="noopener" aria-label="Twitter">
                  {% render 'icon-velour', icon: 'twitter', size: 'small' %}
                </a>
              </li>
            {%- endif -%}

            {%- if settings.social_pinterest != blank -%}
              <li>
                <a href="{{ settings.social_pinterest }}" class="social-link" target="_blank" rel="noopener" aria-label="Pinterest">
                  {% render 'icon-velour', icon: 'pinterest', size: 'small' %}
                </a>
              </li>
            {%- endif -%}

            {%- if settings.social_snapchat != blank -%}
              <li>
                <a href="{{ settings.social_snapchat }}" class="social-link" target="_blank" rel="noopener" aria-label="Snapchat">
                  {% render 'icon-velour', icon: 'snapchat', size: 'small' %}
                </a>
              </li>
            {%- endif -%}

            {%- if settings.social_youtube != blank -%}
              <li>
                <a href="{{ settings.social_youtube }}" class="social-link" target="_blank" rel="noopener" aria-label="YouTube">
                  {% render 'icon-velour', icon: 'youtube', size: 'small' %}
                </a>
              </li>
            {%- endif -%}
            
            {%- if settings.social_vimeo != blank -%}
              <li>
                <a href="{{ settings.social_vimeo }}" class="social-link" target="_blank" rel="noopener" aria-label="Vimeo">
                  {% render 'icon-velour', icon: 'vimeo', size: 'small' %}
                </a>
              </li>
            {%- endif -%}
          </ul>
        {%- endif -%}

          {%- if section.settings.show_follow_on_shop -%}
          <div class="footer-list-item">
            {% render 'follow-on-shop', button_size: section.settings.follow_button_size %}
          </div>
          {%- endif -%}

      </div>

    {%- if section.settings.show_quick_links -%}
    <ul class="footer-list">

      <li>
      <p class="footer-list-title">{{ section.settings.quick_links_title }}</p>
      </li>

      {%- if section.settings.quick_links_menu != blank -%}
        {% assign quick_nav_links = linklists[section.settings.quick_links_menu].links %}
        {% for link in quick_nav_links %}
          <li>
            <a href="{{ link.url }}" class="footer-link">{{ link.title }}</a>
          </li>
        {% endfor %}
      {%- else -%}
        <li>
        <a href="#" class="footer-link">Home</a>
        </li>

        <li>
        <a href="#" class="footer-link">Shop</a>
        </li>

        <li>
        <a href="#" class="footer-link">Blog</a>
        </li>

        <li>
        <a href="#" class="footer-link">Terms and Conditions</a>
        </li>
      {%- endif -%}

      </ul>
      {%- endif -%}

      {%- if section.settings.show_about_links -%}
      <ul class="footer-list">
        <li>
          <p class="footer-list-title">{{ section.settings.about_links_title }}</p>
        </li>
        {%- if section.settings.about_links_menu != blank -%}
          {% assign nav_links = linklists[section.settings.about_links_menu].links %}
          {% for link in nav_links %}
            <li class="navbar-item">
              <a
                href="{{ link.url }}"
                class="footer-link"
                data-nav-link>{{ link.title }}</a>
            </li>
          {% endfor %}
        {%- endif -%}
      </ul>
      {%- endif -%}

      {%- if section.settings.show_newsletter -%}
      <div class="footer-list">

        <p class="footer-list-title">{{ section.settings.newsletter_title }}</p>

        {%- if section.settings.newsletter_description != blank -%}
        <p class="newsletter-description">{{ section.settings.newsletter_description }}</p>
        {%- endif -%}

        <form action="" class="footer-form">
          <input
            type="email"
            name="email_address"
            placeholder="{{ section.settings.newsletter_placeholder }}"
            required
            class="email-field"
            aria-label="Email address">

          <button type="submit" class="footer-form-btn" aria-label="Subscribe">
            {% render 'icon-velour', icon: 'arrow-forward' %}
          </button>
        </form>

        {%- if section.settings.show_footer_links -%}
        <div class="wrapper">

          {%- if section.settings.terms_link != blank -%}
          <a href="{{ section.settings.terms_link }}" class="footer-link">{{ section.settings.terms_text }}</a>
          {%- endif -%}

          {%- if section.settings.policy_link != blank -%}
          <a href="{{ section.settings.policy_link }}" class="footer-link">{{ section.settings.policy_text }}</a>
          {%- endif -%}

          {%- if section.settings.map_link != blank -%}
          <a href="{{ section.settings.map_link }}" class="footer-link">{{ section.settings.map_text }}</a>
          {%- endif -%}

        </div>
        {%- endif -%}

      </div>
      {%- endif -%}

    </div>

    <div class="footer-bottom">

      <p class="copyright">
        &copy;
        <a href="#" class="copyright-link">{{ section.settings.copyright_text | default: 'Velour' }}</a>.
        <span id="year"></span>
        {%- if section.settings.show_powered_by -%}
        {{ powered_by_link }}
        {%- endif -%}

      </p>
      <div class="footer__column--info">
        {%- if section.settings.payment_enable -%}
          <div class="footer__payment">
            <ul class="list list-payment" role="list">
              {%- for type in shop.enabled_payment_types -%}
                <li class="list-payment__item">
                  {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
                </li>
              {%- endfor -%}
            </ul>
          </div>
        {%- endif -%}
      </div>

    </div>

  </div>
</footer>


<script>
(function() {
  document.getElementById("year").textContent = new Date().getFullYear();
})();
</script>


