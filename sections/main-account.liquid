<div class="customer account">
  <div class="container">
    <div class="account-header">
      <h1 class="h2">{{ 'customer.account.title' | t | default: 'My Account' }}</h1>
      <a href="{{ routes.account_logout_url }}" class="link-underline">
        {{ 'customer.log_out' | t | default: 'Log out' }}
      </a>
    </div>

    <div class="account-grid">
      <div class="account-orders">
        <h2 class="h3">{{ 'customer.orders.title' | t | default: 'Order History' }}</h2>

        {% paginate customer.orders by 20 %}
          {%- if customer.orders.size > 0 -%}
            
            <table role="table" class="order-history">
              <caption class="visually-hidden">{{ 'customer.orders.title' | t | default: 'Order History' }}</caption>
              <thead role="rowgroup">
                <tr role="row">
                  <th id="ColumnOrder" scope="col" role="columnheader">{{ 'customer.orders.order_number' | t | default: 'Order' }}</th>
                  <th id="ColumnDate" scope="col" role="columnheader">{{ 'customer.orders.date' | t | default: 'Date' }}</th>
                  <th id="ColumnPayment" scope="col" role="columnheader">{{ 'customer.orders.payment_status' | t | default: 'Payment Status' }}</th>
                  <th id="ColumnFulfillment" scope="col" role="columnheader">{{ 'customer.orders.fulfillment_status' | t | default: 'Fulfillment Status' }}</th>
                  <th id="ColumnTotal" scope="col" role="columnheader">{{ 'customer.orders.total' | t | default: 'Total' }}</th>
                </tr>
              </thead>
              <tbody role="rowgroup">
                {%- for order in customer.orders -%}
                  <tr role="row">
                    <td
                      id="RowOrder"
                      role="cell"
                      headers="ColumnOrder"
                      data-label="{{ 'customer.orders.order_number' | t | default: 'Order' }}"
                    >
                      <a href="{{ order.customer_url }}" aria-label="{{ 'customer.orders.order_number_link' | t: number: order.name }}">
                        {{ order.name }}
                      </a>
                    </td>
                    <td headers="RowOrder ColumnDate" role="cell" data-label="{{ 'customer.orders.date' | t | default: 'Date' }}">
                      {{ order.created_at | time_tag: format: 'date' }}
                    </td>
                    <td headers="RowOrder ColumnPayment" role="cell" data-label="{{ 'customer.orders.payment_status' | t | default: 'Payment Status' }}">
                      {{ order.financial_status_label }}
                    </td>
                    <td headers="RowOrder ColumnFulfillment" role="cell" data-label="{{ 'customer.orders.fulfillment_status' | t | default: 'Fulfillment Status' }}">
                      {{ order.fulfillment_status_label }}
                    </td>
                    <td headers="RowOrder ColumnTotal" role="cell" data-label="{{ 'customer.orders.total' | t | default: 'Total' }}">
                      {{ order.total_price | money_with_currency }}
                    </td>
                  </tr>
                {%- endfor -%}
              </tbody>
            </table>

          {%- else -%}
            <p>{{ 'customer.orders.none' | t | default: "You haven't placed any orders yet." }}</p>
          {%- endif -%}

          {%- if paginate.pages > 1 -%}
            {%- if paginate.parts.size > 0 -%}
                <nav class="pagination" role="navigation" aria-label="{{ 'general.pagination.label' | t }}">
                  <ul role="list">
                  {%- if paginate.previous -%}
                    <li>
                      <a href="{{ paginate.previous.url }}" aria-label="{{ 'general.pagination.previous' | t }}">
                        &larr;
                      </a>
                    </li>
                  {%- endif -%}

                  {%- for part in paginate.parts -%}
                    <li>
                      {%- if part.is_link -%}
                        <a href="{{ part.url }}" aria-label="{{ 'general.pagination.page' | t: number: part.title }}">{{ part.title }}</a>
                      {%- else -%}
                        {%- if part.title == paginate.current_page -%}
                          <span aria-current="page" aria-label="{{ 'general.pagination.page' | t: number: part.title }}">{{ part.title }}</span>
                        {%- else -%}
                          <span>{{ part.title }}</span>
                        {%- endif -%}
                      {%- endif -%}
                    </li>
                  {%- endfor -%}

                  {%- if paginate.next -%}
                    <li>
                      <a href="{{ paginate.next.url }}" aria-label="{{ 'general.pagination.next' | t }}">
                        &rarr;
                      </a>
                    </li>
                  {%- endif -%}
                  </ul>
                </nav>
            {%- endif -%}
          {%- endif -%}
        {% endpaginate %}
      </div>

      <div class="account-details">
        <h2 class="h3">{{ 'customer.account.details' | t | default: 'Account Details' }}</h2>

        {{ customer.default_address | format_address }}

        <a href="{{ routes.account_addresses_url }}">
          {{ 'customer.account.view_addresses' | t | default: 'View addresses' }} ({{ customer.addresses_count }})
        </a>
      </div>
    </div>
  </div>
</div>

<style>
  .customer.account { padding: 4rem 1rem; }
  .account-header { text-align: center; margin-bottom: 4rem; }
  .account-header h1 { margin-bottom: 1rem; }
  .account-grid { display: grid; grid-template-columns: 1fr; gap: 4rem; }
  @media screen and (min-width: 750px) {
    .account-grid { grid-template-columns: 2fr 1fr; }
  }
  .order-history { width: 100%; border-collapse: collapse; margin-top: 2rem; }
  .order-history th, .order-history td { padding: 1rem; text-align: left; border-bottom: 1px solid #e1e1e1; }
  
  @media screen and (max-width: 750px) {
    .order-history, .order-history thead, .order-history tbody, .order-history th, .order-history td, .order-history tr { display: block; }
    .order-history thead tr { position: absolute; top: -9999px; left: -9999px; }
    .order-history td { position: relative; padding-left: 50%; border: none; border-bottom: 1px solid #eee; }
    .order-history td:before { position: absolute; top: 1rem; left: 1rem; width: 45%; padding-right: 10px; white-space: nowrap; content: attr(data-label); font-weight: bold; }
  }
</style>

{% schema %}
{
  "name": "Account Page",
  "settings": []
}
{% endschema %}
