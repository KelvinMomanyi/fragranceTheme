  <header class="header color-scheme-{{ section.settings.color_scheme }}" style="{% render 'color-scheme-styles', scheme: section.settings.color_scheme %}" data-header>
    <div class="container">

      
      <div class="header-start">
        <button class="header-action-btn" aria-label="Open menu" data-nav-toggler>
          {% render 'icon-velour', icon: 'menu' %}
        </button> 
      </div>
      
      <div class="header-center">
      <a href="/" class="logo"  >
        {% assign default_width = 69 %}
        {% assign default_height = 26 %}
        {% assign scaled_width = default_width | times: section.settings.logo_scale %}
        {% assign scaled_height = default_height | times: section.settings.logo_scale %}
          {% if section.settings.logo_image != blank %}
            <img 
              src="{{ section.settings.logo_image | image_url: width: scaled_width }}"  
              srcset="{{ section.settings.logo_image | image_url: width: scaled_width }} 1x,
                      {{ section.settings.logo_image | image_url: width: scaled_width | times: 2 }} 2x"
              alt="{{ shop.name }}"
              width="{{ scaled_width }}" 
              height="{{ scaled_height }}" 
              loading="eager"
            />
           {% else %}
            <a href="/" class="logo">Velour</a>
          {% endif %} 
        </a>
      </div>
      
     
    
      {% comment %} <div class="input-wrapper">
        <input type="search" name="search" placeholder="Search Anything..." class="input-field">

        {% render 'icon-velour', icon: 'search' %}
      </div> {% endcomment %}
      <div class="header-action" id="headerActions">
        <button class="header-action-btn" aria-label="Search" onclick="openSearchModal()">
          {% render 'icon-velour', icon: 'search' %}
        </button> 
        {% if shop.customer_accounts_enabled %}
          {% if customer %}
            <a href="{{ routes.account_url }}" class="header-action-btn" aria-label="Account">
              {% render 'icon-velour', icon: 'person' %}
            </a>
          {% else %}
            <button class="header-action-btn" aria-label="Login" onclick="openLoginModal()">
              {% render 'icon-velour', icon: 'person' %}
            </button>
          {% endif %}
        {% endif %}
        <button class="header-action-btn" aria-label="Cart" onclick="openCart()">
          {% render 'icon-velour', icon: 'bag-handle' %}
          <span class="btn-badge">0</span>
        </button>

