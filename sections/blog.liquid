<!-- 
  - #BLOG
-->

<section class="section blog" id="blog" aria-label="blog" data-aos="fade-up">
  <div class="container">

    <div class="title-wrapper">
      <h2 class="h2 section-title">{{section.settings.heading_text}}</h2>

      <a href="/blogs/news" class="btn-link">
        <span class="span">View All</span>

        {% render 'icon-fragrance', icon: 'arrow-forward' %}
      </a>
    </div>

    <ul class="grid-list">
      {% assign selected_blog_handle = section.settings.blog_type %}

      {% if selected_blog_handle != blank and blogs[selected_blog_handle].articles.size > 0 %}
        <!-- Display articles from selected blog -->
        {% for article in blogs[selected_blog_handle].articles limit: 3 %}
          <li class="flex-item">
            <div class="blog-card">
              <figure class="card-banner img-holder has-before hover:shine" style="--width:700; --height:450;">
                <img src="{{ article.image | image_url: width: 700 }}" alt="{{ article.title }}" class="img-cover" width="700" height="450" loading="lazy">
              </figure>
      
              <h3 class="h3">
                <a href="{{ article.url }}" class="card-title">{{ article.title }}</a>
              </h3>
              
              <a href="{{ article.url }}" class="btn-link">
                <span class="span">Read More</span>
                {% render 'icon-fragrance', icon: 'arrow-forward' %}
              </a>
            </div>
          </li>
        {% endfor %}
      {% else %}
     <!-- Display default blog cards -->
      <li>
        <div class="blog-card">

          <div class="card-banner img-holder" style="--width: 374; --height: 243;">
            {{ 'lifestyle-1' | placeholder_svg_tag: 'img-cover' }}

            <a href="#" class="card-btn">
              <span class="span">Read more</span>

              {% render 'icon-fragrance', icon: 'add' %}
            </a>
          </div>

          <div class="card-content">

            <h3 class="h3">
              <a href="#" class="card-title">Understanding Fragrance Families and Their Unique Appeal</a>
            </h3>

            <ul class="card-meta-list">

              <li class="card-meta-item">
                <time class="card-meta-text" datetime="2022-09-27">November 27, 2022</time>
              </li>

              <li class="card-meta-item">
                <a href="#" class="card-meta-text">Admin</a>
              </li>

              <li class="card-meta-item">
                in <a href="#" class="card-meta-text">deco</a>
              </li>

            </ul>

          </div>

        </div>
      </li>

      <li>
        <div class="blog-card">

          <div class="card-banner img-holder" style="--width: 374; --height: 243;">
            {{ 'lifestyle-2' | placeholder_svg_tag: 'img-cover' }}

            <a href="#" class="card-btn">
              <span class="span">Read more</span>

              {% render 'icon-fragrance', icon: 'add' %}
            </a>
          </div>

          <div class="card-content">

            <h3 class="h3">
              <a href="#" class="card-title">The Art of Choosing the Perfect Fragrance</a>
            </h3>

            <ul class="card-meta-list">

              <li class="card-meta-item">
                <time class="card-meta-text" datetime="2022-09-25">November 25, 2022</time>
              </li>

              <li class="card-meta-item">
                <a href="#" class="card-meta-text">Admin</a>
              </li>

              <li class="card-meta-item">
                in <a href="#" class="card-meta-text">deco</a>
              </li>

            </ul>

          </div>

        </div>
      </li>

      <li>
        <div class="blog-card">

          <div class="card-banner img-holder" style="--width: 374; --height: 243;">
            {{ 'collection-1' | placeholder_svg_tag: 'img-cover' }}

            <a href="#" class="card-btn">
              <span class="span">Read more</span>

              {% render 'icon-fragrance', icon: 'add' %}
            </a>
          </div>

          <div class="card-content">

            <h3 class="h3">
              <a href="#" class="card-title">How to Store and Apply Your Fragrance for Long-Lasting Scent</a>
            </h3>

            <ul class="card-meta-list">

              <li class="card-meta-item">
                <time class="card-meta-text" datetime="2022-09-18">November 18, 2022</time>
              </li>

              <li class="card-meta-item">
                <a href="#" class="card-meta-text">Admin</a>
              </li>

              <li class="card-meta-item">
                in <a href="#" class="card-meta-text">deco</a>
              </li>

            </ul>

          </div>

        </div>
      </li>
      {% endif %}
    </ul>

  </div>
</section>

{% schema %}
{
  "name": "Blog",
  "settings": [
     {
      "type":"text",
      "id":"heading_text",
      "label":"Blog Heading",
      "default":"Explore Our Blog"
     },
     {
      "type": "blog",
      "id": "blog_type",
      "label": "Select Blog Category"
     }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Blog"
    }
  ]
}
{% endschema %}