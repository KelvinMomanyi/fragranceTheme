.modal {
  display: none;
  position: fixed;
  z-index: 9000;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  overflow: auto;
  background-color: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(5px);
  animation: fadeIn 0.3s;
}

.modal-content {
  background-color: var(--white);
  margin: 10% auto;
  padding: 40px;
  border: 1px solid #888;
  width: 90%;
  max-width: 600px;
  position: relative;
  border-radius: 8px;
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
  animation: slideIn 0.3s;
}

.search-modal-content {
  max-width: 800px;
  margin-top: 15vh;
}

.login-modal-content {
  max-width: 450px;
  margin-top: 15vh;
}

.close-modal {
  color: #aaa;
  position: absolute;
  top: 15px;
  right: 25px;
  font-size: 35px;
  font-weight: bold;
  cursor: pointer;
  transition: color 0.2s;
  line-height: 1;
}

.close-modal:hover,
.close-modal:focus {
  color: var(--black);
  text-decoration: none;
}

.modal-header {
  margin-bottom: 2rem;
}

.modal-body .field {
  margin-bottom: 1.5rem;
}

.modal-body input {
  width: 100%;
  padding: 12px 15px;
