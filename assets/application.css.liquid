/*

   -----------------------------------*\ 
   #style.css.liquid - Dynamic Color Schemes (Dawn-Style) 
   \*----------------------------------- 
*/

:root {
  /* Default Scheme - using first color scheme as default */
  --color-background: {{ settings.color_schemes.scheme-1.settings.background | default: '#FFFFFF' }};
  --color-background-gradient: {{ settings.color_schemes.scheme-1.settings.background_gradient | default: '' }};
  --color-text: {{ settings.color_schemes.scheme-1.settings.text | default: '#121212' }};
  --color-button: {{ settings.color_schemes.scheme-1.settings.button | default: '#121212' }};
  --color-button-label: {{ settings.color_schemes.scheme-1.settings.button_label | default: '#FFFFFF' }};
  --color-outline-button: {{ settings.color_schemes.scheme-1.settings.secondary_button_label | default: '#121212' }};
  --color-shadow: {{ settings.color_schemes.scheme-1.settings.shadow | default: '#000000' }};

  /* Legacy Variable Mapping (Global Default) */
  --white: var(--color-background);
  --black: var(--color-text);
  --tan-crayola: var(--color-button);

  /* Retain other static variables */
  --red-orange-color-wheel: hsl(17, 96%, 48%);
  --middle-blue-green: hsl(167, 45%, 72%);
  --smokey-black: hsl(0, 0%, 7%);
  --spanish-gray: hsl(0, 0%, 60%);
  --granite-gray: hsl(0, 0%, 40%);
  --light-gray: hsl(0, 0%, 80%);
  --black_10: hsla(0, 0%, 0%, 0.1);
  --black_25: hsla(0, 0%, 0%, 0.25);
  --black_50: hsla(0, 0%, 0%, 0.4);
  --black_70: hsla(0, 0%, 0%, 0.7);
  --cultured: hsl(220, 16%, 96%);
  --manatee: hsl(218, 11%, 65%);

  /* Typography */
  --ff-roboto: {{ font_body.family }}, 
  {{ font_body.fallback_families }};
  --ff-mr_de_haviland: {{ font_heading.family }}, 
  {{ font_heading.fallback_families }};
  --fs-1: 6rem;
  --fs-2: 3rem;
  --fs-3: 2rem;
  --fs-4: 1.8rem;
  --fs-5: 1.4rem;
  --fs-6: 1.2rem;
  --fw-900: 900;
  --fw-700: 700;
  --fw-500: 500;
  --section-padding: 50px;
  --shadow: 0 0 2px hsla(0, 0%, 0%, 0.2);
  --transition-1: 0.25s ease;
  --transition-2: 0.5s ease;
  --cubic-in: cubic-bezier(0.51, 0.03, 0.64, 0.28);
  --cubic-out: cubic-bezier(0.33, 0.85, 0.4, 0.96);
}

/* Dynamic Scheme Classes (Dawn-Style) */
{% for scheme in settings.color_schemes %}
  {% assign scheme_id = scheme[0] %}
  {% assign scheme_settings = scheme[1].settings %}

  .color-scheme-{{ scheme_id }} {
    --color-background: {{ scheme_settings.background }};
    --color-background-gradient: {{ scheme_settings.background_gradient }};
    --color-text: {{ scheme_settings.text }};
    --color-button: {{ scheme_settings.button }};
    --color-button-label: {{ scheme_settings.button_label }};
    --color-outline-button: {{ scheme_settings.secondary_button_label }};
    --color-shadow: {{ scheme_settings.shadow }};

    /* Overwrite internal vars for this scope */
    --white: var(--color-background);
    --black: var(--color-text);
    --smokey-black: var(--color-text);
    --tan-crayola: var(--color-button);

    /* Apply styles directly */
    background-color: var(--color-background) !important;
    color: var(--color-text) !important;
  }
{% endfor %}

/* ===== Color Scheme Overrides (force over hardcoded colors) ===== */
/* These rules use !important to guarantee visibility when schemes change */[class*="color-scheme-"] h1,
[class*="color-scheme-"] h2,
[class*="color-scheme-"] h3,
[class*="color-scheme-"] h4,
[class*="color-scheme-"] h5,
[class*="color-scheme-"] h6 {
  color: var(--color-text) !important;
}

[class*="color-scheme-"] p,
[class*="color-scheme-"] span:not(.shopify-product-reviews-badge),
[class*="color-scheme-"] li,
[class*="color-scheme-"] label,
[class*="color-scheme-"] address,
[class*="color-scheme-"] blockquote,
[class*="color-scheme-"] figcaption {
  color: var(--color-text) !important;
}

[class*="color-scheme-"] .section-title,
[class*="color-scheme-"] .section-subtitle,
[class*="color-scheme-"] .section-text,
[class*="color-scheme-"] .card-title,
[class*="color-scheme-"] .card-content,
[class*="color-scheme-"] .card-text,
[class*="color-scheme-"] .hero-title,
[class*="color-scheme-"] .hero-subtitle {
  color: var(--color-text) !important;
}

/* Links */
[class*="color-scheme-"] a:not(.btn):not(.btn-primary):not(.btn-secondary) {
  color: var(--color-outline-button) !important;
}

/* Primary buttons */
[class*="color-scheme-"] .btn,
[class*="color-scheme-"] .btn-primary {
  background-color: var(--color-button) !important;
  color: var(--color-button-label) !important;
  border-color: var(--color-button) !important;
}

/* Secondary/Outline buttons */
[class*="color-scheme-"] .btn-secondary {
  background-color: transparent !important;
  color: var(--color-outline-button) !important;
  border-color: var(--color-outline-button) !important;
}

/* Cards, panels, and content blocks */
[class*="color-scheme-"] .feature-item,
[class*="color-scheme-"] .testimonial-item,
[class*="color-scheme-"] .card,
[class*="color-scheme-"] .product-card,
[class*="color-scheme-"] .blog-card {
  background-color: var(--color-background) !important;
  color: var(--color-text) !important;
}

/* Override specific hardcoded backgrounds */
[class*="color-scheme-"] .our-story-text,
[class*="color-scheme-"] .hero-overlay,
[class*="color-scheme-"] .cta {
  background-color: var(--color-background) !important;
  color: var(--color-text) !important;
}

/* Form inputs */
[class*="color-scheme-"] input:not([type="submit"]):not([type="button"]),
[class*="color-scheme-"] textarea,
[class*="color-scheme-"] select:not(.color_scheme) {
  color: var(--color-text) !important;
  border-color: var(--color-text) !important;
}

/* Icons */
[class*="color-scheme-"] .icon,
[class*="color-scheme-"] .feature-icon {
  color: var(--color-text) !important;
}

/* Social links */
[class*="color-scheme-"] .social-link {
  color: var(--color-text) !important;
}

/* Footer-specific */
[class*="color-scheme-"] .footer,
[class*="color-scheme-"] footer {
  background-color: var(--color-background) !important;
  color: var(--color-text) !important;
}

/* Gradient overlay sections */
[class*="color-scheme-"] .gradient-overlay {
  background-color: transparent !important;
}


/*

   -----------------------------------*\ 
   #RESET 
   \*----------------------------------- 
*/

*,
*::before,
*::after {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

li {
  list-style: none;
}

a,
img,
span,
input,
button {
  display: block;
}

.icon {
  display: block;
  pointer-events: none;
  transition: transform 0.2s ease-in-out
  , opacity 0.2s ease-in-out;
  will-change: transform
  , opacity;
}

a {
  color: inherit;
  text-decoration: none;
}

img {
  height: auto;
}

input,
button {
  background: none;
  border: none;
  font: inherit;
}

input {
  width: 100%;
}

button {
  cursor: pointer;
}

.icon,
ion-icon {
  pointer-events: none;
}

address {
  font-style: normal;
}

html {
  font-family: var(--ff-roboto);
  font-size: 10px;
  scroll-behavior: smooth;
}

body {
  background-color: var(--white);
  color: var(--black);
  font-size: 1.6rem;
  line-height: 1.7;
}

body.active {
  overflow: hidden;
}

:focus-visible {
  outline: 2px solid var(--color-text);
  outline-offset: 4px;
}

/* Minimum touch target size */
a,
button,
input,
select,
textarea,
label {
  min-height: 24px;
  min-width: 24px;
}

::placeholder {
  color: var(--manatee);
}

::-webkit-scrollbar {
  width: 6px;
}

::-webkit-scrollbar-track {
  background-color: hsl(0, 0%, 100%);
}

::-webkit-scrollbar-thumb {
  background-color: hsl(0, 0%, 33%);
}

::-webkit-scrollbar-thumb:hover {
  background-color: hsl(0, 0%, 0%);
}


